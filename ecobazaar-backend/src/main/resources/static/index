<script>
    // Base URL for API
    const API_BASE_URL = 'http://localhost:8080';

    // Application state
    let currentUser = null;
    let currentView = 'home';
    let products = [];
    let categories = [];
    let cart = { items: [] };
    let orders = [];
    let wishlist = [];
    let userReviews = [];
    let dashboardCache = {
        user: null,
        seller: null,
        admin: null
    };

    // Image upload state
    let currentImageBase64 = null;
    let currentImageFile = null;

    // DOM Content Loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Check if user is already logged in
        const savedUser = localStorage.getItem('ecobazaar_user');
        if (savedUser) {
            currentUser = JSON.parse(savedUser);
            updateUIForUser();
        } else {
            loadView('login');
        }

        // Load categories
        loadCategories();
    });

    // API Service Functions
    const apiService = {
        // Authentication APIs
        async register(userData) {
            const response = await fetch(`${API_BASE_URL}/api/auth/register`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(userData)
            });
            return handleResponse(response);
        },

        async login(credentials) {
            const response = await fetch(`${API_BASE_URL}/api/auth/login`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(credentials)
            });
            return handleResponse(response);
        },

        async getAllowedRoles() {
            const response = await fetch(`${API_BASE_URL}/api/auth/allowed-roles`);
            return handleResponse(response);
        },

        // Product APIs
        async getProducts(params = {}) {
            const queryString = new URLSearchParams(params).toString();
            const url = `${API_BASE_URL}/api/products${queryString ? `?${queryString}` : ''}`;
            const response = await fetch(url);
            return handleResponse(response);
        },

        async getProductById(id) {
            const response = await fetch(`${API_BASE_URL}/api/products/${id}`);
            return handleResponse(response);
        },

        async addProduct(productData) {
            const response = await fetch(`${API_BASE_URL}/api/products/add`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(productData)
            });
            return handleResponse(response);
        },

        async updateProduct(id, productData) {
            const response = await fetch(`${API_BASE_URL}/api/products/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(productData)
            });
            return handleResponse(response);
        },

        async deleteProduct(id) {
            const response = await fetch(`${API_BASE_URL}/api/products/${id}?userId=${currentUser.id}`, {
                method: 'DELETE'
            });
            return handleResponse(response);
        },

        async getFeaturedProducts() {
            const response = await fetch(`${API_BASE_URL}/api/products/featured`);
            return handleResponse(response);
        },

        async getSellerProducts(sellerId) {
            const response = await fetch(`${API_BASE_URL}/api/products/seller/${sellerId}`);
            return handleResponse(response);
        },

        async getPendingProducts() {
            const response = await fetch(`${API_BASE_URL}/api/products/admin/pending`);
            return handleResponse(response);
        },

        async verifyProduct(id) {
            const response = await fetch(`${API_BASE_URL}/api/products/admin/verify/${id}?adminId=${currentUser.id}`, {
                method: 'PUT'
            });
            return handleResponse(response);
        },

        async toggleFeaturedStatus(id) {
            const response = await fetch(`${API_BASE_URL}/api/products/${id}/feature?adminId=${currentUser.id}`, {
                method: 'PUT'
            });
            return handleResponse(response);
        },

        // Category APIs
        async getCategories() {
            const response = await fetch(`${API_BASE_URL}/api/categories`);
            return handleResponse(response);
        },

        async createCategory(categoryData) {
            const response = await fetch(`${API_BASE_URL}/api/categories`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(categoryData)
            });
            return handleResponse(response);
        },

        async updateCategory(id, categoryData) {
            const response = await fetch(`${API_BASE_URL}/api/categories/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(categoryData)
            });
            return handleResponse(response);
        },

        async deleteCategory(id) {
            const response = await fetch(`${API_BASE_URL}/api/categories/${id}`, {
                method: 'DELETE'
            });
            return handleResponse(response);
        },

        // Cart APIs
        async getCart(userId) {
            const response = await fetch(`${API_BASE_URL}/api/cart/${userId}`);
            return handleResponse(response);
        },

        async addToCart(userId, itemData) {
            const response = await fetch(`${API_BASE_URL}/api/cart/${userId}/items`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(itemData)
            });
            return handleResponse(response);
        },

        async removeFromCart(userId, itemId) {
            const response = await fetch(`${API_BASE_URL}/api/cart/${userId}/items/${itemId}`, {
                method: 'DELETE'
            });
            return handleResponse(response);
        },

        // Order APIs
        async createOrder(userId, orderData) {
            const response = await fetch(`${API_BASE_URL}/api/orders/${userId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(orderData)
            });
            return handleResponse(response);
        },

        async getUserOrders(userId) {
            const response = await fetch(`${API_BASE_URL}/api/orders/user/${userId}`);
            return handleResponse(response);
        },

        async getAllOrders() {
            const response = await fetch(`${API_BASE_URL}/api/orders/all`);
            return handleResponse(response);
        },

        async updateOrderStatus(orderId, status) {
            const response = await fetch(`${API_BASE_URL}/api/orders/${orderId}/status?status=${status}`, {
                method: 'PUT'
            });
            return handleResponse(response);
        },

        // Review APIs
        async addReview(reviewData) {
            const response = await fetch(`${API_BASE_URL}/api/reviews`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(reviewData)
            });
            return handleResponse(response);
        },

        async getProductReviews(productId) {
            const response = await fetch(`${API_BASE_URL}/api/reviews/product/${productId}`);
            return handleResponse(response);
        },

        async getUserReviews(userId) {
            const response = await fetch(`${API_BASE_URL}/api/reviews/user/${userId}`);
            return handleResponse(response);
        },

        async deleteReview(reviewId) {
            const response = await fetch(`${API_BASE_URL}/api/reviews/${reviewId}?userId=${currentUser.id}`, {
                method: 'DELETE'
            });
            return handleResponse(response);
        },

        // Wishlist APIs
        async getWishlist(userId) {
            const response = await fetch(`${API_BASE_URL}/api/wishlist/${userId}`);
            return handleResponse(response);
        },

        async addToWishlist(userId, productId) {
            const response = await fetch(`${API_BASE_URL}/api/wishlist/${userId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId })
            });
            return handleResponse(response);
        },

        async removeFromWishlist(userId, productId) {
            const response = await fetch(`${API_BASE_URL}/api/wishlist/${userId}/${productId}`, {
                method: 'DELETE'
            });
            return handleResponse(response);
        },

        async checkWishlist(userId, productId) {
            const response = await fetch(`${API_BASE_URL}/api/wishlist/${userId}/check/${productId}`);
            return handleResponse(response);
        },

        // Dashboard APIs - Comprehensive
        async getUserDashboard(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}`);
            return handleResponse(response);
        },

        async getSellerDashboard(sellerId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/seller/${sellerId}`);
            return handleResponse(response);
        },

        async getAdminDashboard() {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin`);
            return handleResponse(response);
        },

        // Dashboard APIs - Granular User Endpoints
        async getUserStats(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/stats`);
            return handleResponse(response);
        },

        async getUserAchievements(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/achievements`);
            return handleResponse(response);
        },

        async getUserCarbonTips(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/tips`);
            return handleResponse(response);
        },

        async getUserCarbonTrend(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/carbon-trend`);
            return handleResponse(response);
        },

        async getUserCategoryBreakdown(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/category-breakdown`);
            return handleResponse(response);
        },

        async getUserEcoRatingDistribution(userId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/eco-rating-distribution`);
            return handleResponse(response);
        },

        async getUserRecentOrders(userId, limit = 10) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/user/${userId}/recent-orders?limit=${limit}`);
            return handleResponse(response);
        },

        // Dashboard APIs - Granular Seller Endpoints
        async getSellerStats(sellerId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/seller/${sellerId}/stats`);
            return handleResponse(response);
        },

        async getSellerTopProducts(sellerId, limit = 5) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/seller/${sellerId}/top-products?limit=${limit}`);
            return handleResponse(response);
        },

        async getSalesByCategory(sellerId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/seller/${sellerId}/sales-by-category`);
            return handleResponse(response);
        },

        async getRevenueBreakdown(sellerId) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/seller/${sellerId}/revenue-breakdown`);
            return handleResponse(response);
        },

        // Dashboard APIs - Granular Admin Endpoints
        async getPlatformStats() {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/platform-stats`);
            return handleResponse(response);
        },

        async getPendingVerifications() {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/pending-verifications`);
            return handleResponse(response);
        },

        async getTopSellers(limit = 10) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/top-sellers?limit=${limit}`);
            return handleResponse(response);
        },

        async getRecentActivities(limit = 10) {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/recent-activities?limit=${limit}`);
            return handleResponse(response);
        },

        async getCarbonImpact() {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/carbon-impact`);
            return handleResponse(response);
        },

        async getUserRoleDistribution() {
            const response = await fetch(`${API_BASE_URL}/api/dashboard/admin/user-role-distribution`);
            return handleResponse(response);
        },

        // Carbon Analytics APIs
        async getUserCarbonReport(userId) {
            const response = await fetch(`${API_BASE_URL}/api/carbon/report/${userId}`);
            return handleResponse(response);
        },

        async getPlatformCarbonSummary() {
            const response = await fetch(`${API_BASE_URL}/api/carbon/admin/summary`);
            return handleResponse(response);
        }
    };

    // Helper Functions
    async function handleResponse(response) {
        if (!response.ok) {
            const error = await response.json().catch(() => ({ error: 'Unknown error' }));
            throw new Error(error.message || error.error || `HTTP ${response.status}`);
        }
        return response.json();
    }

    function showNotification(message, type = 'info') {
        // Create notification element
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.textContent = message;

        // Set notification style
        notification.style.cssText = `
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            padding: 1rem 1.5rem;
            background: ${type === 'success' ? 'linear-gradient(135deg, #10B981, #059669)' :
                         type === 'error' ? 'linear-gradient(135deg, #EF4444, #DC2626)' :
                         'linear-gradient(135deg, #3B82F6, #1D4ED8)'};
            color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            z-index: 3000;
            animation: slideInRight 0.3s ease, fadeOut 0.3s ease 4.7s forwards;
            font-weight: 500;
            min-width: 300px;
            max-width: 400px;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            border-left: 4px solid ${type === 'success' ? '#34D399' :
                               type === 'error' ? '#FCA5A5' :
                               '#60A5FA'};
        `;

        // Add icon based on type
        const icon = document.createElement('i');
        icon.className = `fas ${type === 'success' ? 'fa-check-circle' :
                                   type === 'error' ? 'fa-exclamation-circle' :
                                   'fa-info-circle'}`;
        notification.prepend(icon);

        document.body.appendChild(notification);

        // Remove after 5 seconds
        setTimeout(() => {
            if (notification.parentNode) {
                notification.style.animation = 'slideOutRight 0.3s ease forwards';
                setTimeout(() => {
                    if (notification.parentNode) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }
        }, 5000);
    }

    // Add animation styles
    const style = document.createElement('style');
    style.textContent = `
        @keyframes slideInRight {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        @keyframes slideOutRight {
            from { transform: translateX(0); opacity: 1; }
            to { transform: translateX(100%); opacity: 0; }
        }
        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }
    `;
    document.head.appendChild(style);

    // Image handling functions
    function handleImageUpload(event) {
        const file = event.target.files[0];
        if (!file) return;

        // Validate file type
        if (!file.type.match('image.*')) {
            showNotification('Please select an image file', 'error');
            return;
        }

        // Validate file size (max 10MB)
        if (file.size > 10 * 1024 * 1024) {
            showNotification('Image size should be less than 10MB', 'error');
            return;
        }

        currentImageFile = file;

        const reader = new FileReader();
        reader.onload = function(e) {
            currentImageBase64 = e.target.result;

            // Show preview
            const previewContainer = document.getElementById('imagePreviewContainer');
            if (previewContainer) {
                previewContainer.style.display = 'block';
                const previewImg = document.getElementById('imagePreview');
                if (previewImg) {
                    previewImg.src = currentImageBase64;
                }
            }

            // Store in localStorage for persistence
            try {
                localStorage.setItem('ecobazaar_product_image', currentImageBase64);
                showNotification('Image uploaded successfully!', 'success');
            } catch (error) {
                console.error('Error storing image in localStorage:', error);
                showNotification('Image uploaded but could not be saved locally', 'warning');
            }
        };

        reader.onerror = function() {
            showNotification('Error reading image file', 'error');
        };

        reader.readAsDataURL(file);
    }

    function handleDragOver(event) {
        event.preventDefault();
        event.stopPropagation();
        const container = event.target.closest('.file-upload-container');
        if (container) {
            container.classList.add('dragover');
        }
    }

    function handleDragLeave(event) {
        event.preventDefault();
        event.stopPropagation();
        const container = event.target.closest('.file-upload-container');
        if (container) {
            container.classList.remove('dragover');
        }
    }

    function handleDrop(event) {
        event.preventDefault();
        event.stopPropagation();

        const container = event.target.closest('.file-upload-container');
        if (container) {
            container.classList.remove('dragover');
        }

        const files = event.dataTransfer.files;
        if (files.length > 0) {
            // Simulate file input change
            const fileInput = document.getElementById('productImageFile');
            if (fileInput) {
                // Create a new DataTransfer object
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(files[0]);
                fileInput.files = dataTransfer.files;

                // Trigger change event
                const changeEvent = new Event('change', { bubbles: true });
                fileInput.dispatchEvent(changeEvent);
            }
        }
    }

    function clearImage() {
        currentImageBase64 = null;
        currentImageFile = null;
        localStorage.removeItem('ecobazaar_product_image');

        const previewContainer = document.getElementById('imagePreviewContainer');
        if (previewContainer) {
            previewContainer.style.display = 'none';
        }

        const fileInput = document.getElementById('productImageFile');
        if (fileInput) {
            fileInput.value = '';
        }

        showNotification('Image cleared', 'info');
    }

    // Load categories from API
    async function loadCategories() {
        try {
            const data = await apiService.getCategories();
            categories = data;
        } catch (error) {
            console.error('Error loading categories:', error);
        }
    }

    // Update UI based on user authentication
    function updateUIForUser() {
        const userInfoDiv = document.getElementById('user-info');
        const navUl = document.getElementById('main-nav');

        if (currentUser) {
            // Create user avatar with initials
            const initials = currentUser.fullName
                .split(' ')
                .map(name => name[0])
                .join('')
                .toUpperCase()
                .substring(0, 2);

            // Update user info display
            userInfoDiv.innerHTML = `
                <div class="user-avatar">${initials}</div>
                <div class="user-details">
                    <div class="user-name">${currentUser.fullName}</div>
                    <div class="role-badge">${currentUser.role}</div>
                </div>
                <button onclick="logout()" class="btn-danger btn-sm">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            `;

            // Update navigation based on user role
            navUl.innerHTML = '';

            // Common navigation for all roles
            const commonNav = [
                { text: 'Home', view: 'home', icon: 'fas fa-home' },
                { text: 'Products', view: 'products', icon: 'fas fa-store' }
            ];

            // Role-specific navigation
            const roleNav = {
                'USER': [
                    { text: 'Dashboard', view: 'user-dashboard', icon: 'fas fa-tachometer-alt' },
                    { text: 'Cart', view: 'cart', icon: 'fas fa-shopping-cart' },
                    { text: 'Orders', view: 'orders', icon: 'fas fa-box' },
                    { text: 'Wishlist', view: 'wishlist', icon: 'fas fa-heart' }
                ],
                'SELLER': [
                    { text: 'Dashboard', view: 'seller-dashboard', icon: 'fas fa-chart-line' },
                    { text: 'My Products', view: 'seller-products', icon: 'fas fa-boxes' },
                    { text: 'Add Product', view: 'add-product', icon: 'fas fa-plus-circle' },
                    { text: 'Sales Analytics', view: 'seller-analytics', icon: 'fas fa-chart-bar' }
                ],
                'ADMIN': [
                    { text: 'Dashboard', view: 'admin-dashboard', icon: 'fas fa-cog' },
                    { text: 'Pending', view: 'pending-products', icon: 'fas fa-clock' },
                    { text: 'All Orders', view: 'all-orders', icon: 'fas fa-list' },
                    { text: 'Categories', view: 'categories', icon: 'fas fa-tags' },
                    { text: 'Platform Analytics', view: 'admin-analytics', icon: 'fas fa-chart-pie' }
                ]
            };

            // Combine common and role-specific navigation
            const navItems = [...commonNav, ...(roleNav[currentUser.role] || [])];

            // Add navigation items to the menu
            navItems.forEach(item => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = '#';
                a.innerHTML = `<i class="${item.icon}"></i> ${item.text}`;
                a.onclick = (e) => {
                    e.preventDefault();
                    loadView(item.view);
                };
                li.appendChild(a);
                navUl.appendChild(li);
            });

            // Load initial view based on role
            if (currentView === 'login' || currentView === 'register') {
                loadView('home');
            }
        } else {
            // User not logged in
            userInfoDiv.innerHTML = `
                <button onclick="loadView('login')" class="btn-outline btn-sm">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
                <button onclick="loadView('register')" class="btn btn-sm">
                    <i class="fas fa-user-plus"></i> Register
                </button>
            `;

            // Navigation for non-logged in users
            navUl.innerHTML = `
                <li><a href="#" onclick="loadView('home')"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="#" onclick="loadView('products')"><i class="fas fa-store"></i> Products</a></li>
                <li><a href="#" onclick="loadView('about')"><i class="fas fa-info-circle"></i> About</a></li>
            `;
        }
    }

    // Main view loader
    async function loadView(view, params = {}) {
        currentView = view;
        const contentDiv = document.getElementById('content');

        // Show loading spinner
        contentDiv.innerHTML = '<div class="spinner"></div>';

        try {
            let html = '';

            switch(view) {
                case 'home':
                    html = await renderHome();
                    break;
                case 'login':
                    html = renderLogin();
                    break;
                case 'register':
                    html = await renderRegister();
                    break;
                case 'products':
                    html = await renderProducts(params);
                    break;
                case 'product-detail':
                    html = await renderProductDetail(params.id);
                    break;
                case 'cart':
                    html = await renderCart();
                    break;
                case 'checkout':
                    html = renderCheckout();
                    break;
                case 'orders':
                    html = await renderUserOrders();
                    break;
                case 'user-dashboard':
                    html = await renderUserDashboard();
                    break;
                case 'seller-dashboard':
                    html = await renderSellerDashboard();
                    break;
                case 'admin-dashboard':
                    html = await renderAdminDashboard();
                    break;
                case 'seller-products':
                    html = await renderSellerProducts();
                    break;
                case 'seller-analytics':
                    html = await renderSellerAnalytics();
                    break;
                case 'admin-analytics':
                    html = await renderAdminAnalytics();
                    break;
                case 'add-product':
                    html = renderAddProductForm();
                    break;
                case 'edit-product':
                    html = await renderEditProductForm(params.id);
                    break;
                case 'pending-products':
                    html = await renderPendingProducts();
                    break;
                case 'all-orders':
                    html = await renderAllOrders();
                    break;
                case 'categories':
                    html = await renderCategories();
                    break;
                case 'wishlist':
                    html = await renderWishlist();
                    break;
                case 'about':
                    html = renderAbout();
                    break;
                case 'contact':
                    html = renderContact();
                    break;
                case 'privacy':
                    html = renderPrivacy();
                    break;
                default:
                    html = await renderHome();
            }

            contentDiv.innerHTML = html;

            // Update active navigation
            updateActiveNav();

        } catch (error) {
            console.error(`Error loading view ${view}:`, error);
            contentDiv.innerHTML = `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                    <h3>Error Loading Content</h3>
                    <p>${error.message}</p>
                    <button onclick="loadView('home')" class="btn mt-3">
                        <i class="fas fa-home"></i> Return to Home
                    </button>
                </div>
            `;
        }
    }

    // Update active navigation link
    function updateActiveNav() {
        const navLinks = document.querySelectorAll('#main-nav a');
        navLinks.forEach(link => {
            link.classList.remove('active');
            const linkText = link.textContent.toLowerCase().replace(/\s+/g, '');
            const viewText = currentView.toLowerCase().replace(/\s+/g, '');

            // Check if this link corresponds to current view
            if (linkText.includes(viewText) ||
                (currentView === 'home' && linkText.includes('home')) ||
                (currentView === 'products' && linkText.includes('products')) ||
                (currentView === 'user-dashboard' && linkText.includes('dashboard')) ||
                (currentView === 'seller-dashboard' && linkText.includes('dashboard')) ||
                (currentView === 'admin-dashboard' && linkText.includes('dashboard'))) {
                link.classList.add('active');
            }
        });
    }

    // Authentication functions
    async function handleLogin(event) {
        event.preventDefault();

        const email = document.getElementById('login-email').value;
        const password = document.getElementById('login-password').value;

        try {
            const user = await apiService.login({ email, password });
            currentUser = user;
            localStorage.setItem('ecobazaar_user', JSON.stringify(user));
            updateUIForUser();
            loadView('home');
            showNotification('Login successful!', 'success');
        } catch (error) {
            showNotification(`Login failed: ${error.message}`, 'error');
        }
    }

    async function handleRegister(event) {
        event.preventDefault();

        const fullName = document.getElementById('register-name').value;
        const email = document.getElementById('register-email').value;
        const password = document.getElementById('register-password').value;
        const role = document.getElementById('register-role').value;

        try {
            await apiService.register({ fullName, email, password, role });
            showNotification('Registration successful! Please login.', 'success');
            loadView('login');
        } catch (error) {
            showNotification(`Registration failed: ${error.message}`, 'error');
        }
    }

    function logout() {
        currentUser = null;
        localStorage.removeItem('ecobazaar_user');
        localStorage.removeItem('ecobazaar_product_image');
        dashboardCache = { user: null, seller: null, admin: null };
        updateUIForUser();
        loadView('login');
        showNotification('Logged out successfully.', 'info');
    }

    // Modal functions
    function openModal(title, content) {
        document.getElementById('modalTitle').textContent = title;
        document.getElementById('modalBody').innerHTML = content;
        document.getElementById('productModal').classList.add('active');
    }

    function closeModal() {
        document.getElementById('productModal').classList.remove('active');
    }

    function openProductFormModal(title, content) {
        document.getElementById('productFormTitle').textContent = title;
        document.getElementById('productFormBody').innerHTML = content;
        document.getElementById('productFormModal').classList.add('active');

        // Load saved image from localStorage if exists
        const savedImage = localStorage.getItem('ecobazaar_product_image');
        if (savedImage) {
            currentImageBase64 = savedImage;
            const previewContainer = document.getElementById('imagePreviewContainer');
            if (previewContainer) {
                previewContainer.style.display = 'block';
                const previewImg = document.getElementById('imagePreview');
                if (previewImg) {
                    previewImg.src = savedImage;
                }
            }
        }
    }

    function closeProductFormModal() {
        document.getElementById('productFormModal').classList.remove('active');
    }

    function openCheckoutModal() {
        document.getElementById('checkoutModal').classList.add('active');
    }

    function closeCheckoutModal() {
        document.getElementById('checkoutModal').classList.remove('active');
    }

    function openDashboardModal(title, content) {
        document.getElementById('dashboardModalTitle').textContent = title;
        document.getElementById('dashboardModalBody').innerHTML = content;
        document.getElementById('dashboardDetailModal').classList.add('active');
    }

    function closeDashboardModal() {
        document.getElementById('dashboardDetailModal').classList.remove('active');
    }

    // View rendering functions
    async function renderHome() {
        let featuredProducts = [];
        try {
            featuredProducts = await apiService.getFeaturedProducts();
        } catch (error) {
            console.error('Error loading featured products:', error);
        }

        return `
            <div class="text-center mb-3">
                <h1>Welcome to EcoBazaar</h1>
                <p class="mb-2 text-lg">Sustainable shopping for a better planet</p>
                ${!currentUser ? `
                    <div class="flex gap-2 justify-center">
                        <button onclick="loadView('register')" class="btn">
                            <i class="fas fa-user-plus"></i> Join Now
                        </button>
                        <button onclick="loadView('login')" class="btn-outline">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                ` : ''}
            </div>

            ${currentUser ? `
                <div class="dashboard-grid">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-leaf"></i>
                            </div>
                            <h3>Your Eco Impact</h3>
                        </div>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value" id="carbonSaved">0</div>
                                <div class="stat-label">Carbon Saved (kg)</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value" id="ecoScore">0</div>
                                <div class="stat-label">Eco Score</div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3>Quick Actions</h3>
                        </div>
                        <div class="flex flex-col gap-2">
                            ${currentUser.role === 'USER' ? `
                                <button onclick="loadView('cart')" class="btn">
                                    <i class="fas fa-shopping-cart"></i> View Cart
                                </button>
                                <button onclick="loadView('orders')" class="btn-outline">
                                    <i class="fas fa-box"></i> My Orders
                                </button>
                                <button onclick="loadView('user-dashboard')" class="btn-outline">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </button>
                            ` : ''}
                            ${currentUser.role === 'SELLER' ? `
                                <button onclick="loadView('add-product')" class="btn">
                                    <i class="fas fa-plus"></i> Add Product
                                </button>
                                <button onclick="loadView('seller-products')" class="btn-outline">
                                    <i class="fas fa-boxes"></i> My Products
                                </button>
                                <button onclick="loadView('seller-dashboard')" class="btn-outline">
                                    <i class="fas fa-chart-line"></i> Dashboard
                                </button>
                            ` : ''}
                            ${currentUser.role === 'ADMIN' ? `
                                <button onclick="loadView('pending-products')" class="btn">
                                    <i class="fas fa-check-circle"></i> Verify Products
                                </button>
                                <button onclick="loadView('all-orders')" class="btn-outline">
                                    <i class="fas fa-list"></i> All Orders
                                </button>
                                <button onclick="loadView('admin-dashboard')" class="btn-outline">
                                    <i class="fas fa-cog"></i> Dashboard
                                </button>
                            ` : ''}
                        </div>
                    </div>
                </div>
            ` : ''}

            <div class="mt-3">
                <h2>Featured Eco Products</h2>
                ${featuredProducts.length > 0 ? `
                    <div class="products-grid mt-2">
                        ${featuredProducts.slice(0, 4).map(product => `
                            <div class="product-card">
                                <div class="product-image">
                                    ${product.imageUrl ?
                                        `<img src="${product.imageUrl}" alt="${product.name}">` :
                                        `<i class="fas fa-leaf" style="font-size: 3rem; color: var(--primary-color);"></i>`
                                    }
                                </div>
                                <div class="product-details">
                                    <h3 class="product-name">${product.name}</h3>
                                    <div class="product-price">$${product.price.toFixed(2)}</div>
                                    <div class="product-meta">
                                        <span>${product.category}</span>
                                        <span>${product.verified ? '<i class="fas fa-check-circle" style="color: var(--success-color);"></i> Verified' : ''}</span>
                                    </div>
                                    <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                        <i class="fas fa-cloud"></i> ${product.carbonFootprint} kg CO2e
                                    </div>
                                    <button onclick="viewProduct(${product.id})" class="btn mt-2 w-full">
                                        <i class="fas fa-eye"></i> View Details
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    <div class="text-center mt-2">
                        <button onclick="loadView('products')" class="btn-secondary">
                            <i class="fas fa-store"></i> View All Products
                        </button>
                    </div>
                ` : `
                    <div class="card">
                        <p>No featured products available.</p>
                    </div>
                `}
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-globe-americas"></i>
                    </div>
                    <h3>About EcoBazaar</h3>
                </div>
                <p>EcoBazaar is a sustainable e-commerce platform that helps you make environmentally conscious shopping decisions. Every product on our platform displays its carbon footprint, helping you understand the environmental impact of your purchases.</p>
                <div class="stats-grid mt-2">
                    <div class="stat-item">
                        <div class="stat-value">500+</div>
                        <div class="stat-label">Eco Products</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">2.5k+</div>
                        <div class="stat-label">Carbon Saved (tons)</div>
                    </div>
                </div>
            </div>
        `;
    }

    function renderLogin() {
        return `
            <div class="form-container">
                <h2 class="text-center">Login to EcoBazaar</h2>
                <form onsubmit="handleLogin(event)">
                    <div class="form-group">
                        <label for="login-email">Email Address</label>
                        <input type="email" id="login-email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="login-password">Password</label>
                        <input type="password" id="login-password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn w-full">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                    <div class="text-center">
                        <p>Don't have an account? <a href="#" onclick="loadView('register')">Register here</a></p>
                        <p><small>Admin demo: admin@ecobazaar.com / admin123</small></p>
                    </div>
                </form>
            </div>
        `;
    }

    async function renderRegister() {
        let allowedRoles = ['USER', 'SELLER'];
        try {
            const data = await apiService.getAllowedRoles();
            allowedRoles = data.allowedRoles || allowedRoles;
        } catch (error) {
            console.error('Error loading allowed roles:', error);
        }

        return `
            <div class="form-container">
                <h2 class="text-center">Create Your EcoBazaar Account</h2>
                <form onsubmit="handleRegister(event)">
                    <div class="form-group">
                        <label for="register-name">Full Name</label>
                        <input type="text" id="register-name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="register-email">Email Address</label>
                        <input type="email" id="register-email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="register-password">Password</label>
                        <input type="password" id="register-password" class="form-control" required minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="register-role">Account Type</label>
                        <select id="register-role" class="form-control" required>
                            <option value="">Select account type</option>
                            ${allowedRoles.map(role => `
                                <option value="${role}">${role}${role === 'USER' ? ' (Shopper)' : role === 'SELLER' ? ' (Merchant)' : ''}</option>
                            `).join('')}
                        </select>
                        <small class="text-gray">Note: ADMIN accounts cannot be created through registration</small>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn w-full">
                            <i class="fas fa-user-plus"></i> Create Account
                        </button>
                    </div>
                    <div class="text-center">
                        <p>Already have an account? <a href="#" onclick="loadView('login')">Login here</a></p>
                    </div>
                </form>
            </div>
        `;
    }

    async function renderSellerProducts() {
        if (!currentUser || (currentUser.role !== 'SELLER' && currentUser.role !== 'ADMIN')) {
            return `<div class="card"><p>Access denied. Only sellers and admins can view seller products.</p></div>`;
        }

        let sellerProducts = [];
        try {
            sellerProducts = await apiService.getSellerProducts(currentUser.id);
        } catch (error) {
            console.error('Error loading seller products:', error);
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <h3>My Products</h3>
                    </div>
                    <p>Error loading products: ${error.message}</p>
                    <button onclick="loadView('seller-products')" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }

        return `
            <div class="flex justify-between items-center mb-3">
                <h2><i class="fas fa-boxes"></i> My Products</h2>
                <button onclick="loadView('add-product')" class="btn">
                    <i class="fas fa-plus"></i> Add New Product
                </button>
            </div>

            ${sellerProducts.length > 0 ? `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Carbon</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${sellerProducts.map(product => `
                                <tr>
                                    <td>
                                        <div style="width: 60px; height: 60px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                            ${product.imageUrl ?
                                                `<img src="${product.imageUrl}" alt="${product.name}" style="width: 100%; height: 100%; object-fit: cover;">` :
                                                `<i class="fas fa-leaf" style="color: var(--primary-color);"></i>`
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div><strong>${product.name}</strong></div>
                                        <div style="font-size: 0.9rem; color: var(--gray-medium);">${product.description.substring(0, 50)}${product.description.length > 50 ? '...' : ''}</div>
                                    </td>
                                    <td>${product.category}</td>
                                    <td>$${product.price.toFixed(2)}</td>
                                    <td>${product.quantity}</td>
                                    <td>
                                        <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                            <i class="fas fa-cloud"></i> ${product.carbonFootprint} kg
                                        </div>
                                    </td>
                                    <td>
                                        ${product.verified ?
                                            `<span style="color: var(--success-color);"><i class="fas fa-check-circle"></i> Verified</span>` :
                                            `<span style="color: var(--warning-color);"><i class="fas fa-clock"></i> Pending</span>`
                                        }
                                        ${product.featured ? `<br><small style="color: var(--secondary-color);"><i class="fas fa-star"></i> Featured</small>` : ''}
                                    </td>
                                    <td>
                                        <div class="flex gap-1">
                                            <button onclick="viewProduct(${product.id})" class="btn btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="loadView('edit-product', {id: ${product.id}})" class="btn-secondary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button onclick="deleteSellerProduct(${product.id})" class="btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>

                <div class="card mt-3">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3>Product Summary</h3>
                            <p>Total Products: ${sellerProducts.length}</p>
                            <p>Verified Products: ${sellerProducts.filter(p => p.verified).length}</p>
                            <p>Featured Products: ${sellerProducts.filter(p => p.featured).length}</p>
                        </div>
                        <div>
                            <p>Total Stock Value: $${sellerProducts.reduce((sum, p) => sum + (p.price * p.quantity), 0).toFixed(2)}</p>
                            <p>Average Carbon Footprint: ${(sellerProducts.reduce((sum, p) => sum + p.carbonFootprint, 0) / sellerProducts.length).toFixed(2)} kg</p>
                        </div>
                    </div>
                </div>
            ` : `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <h3>No Products Yet</h3>
                    </div>
                    <p>You haven't added any products to your store yet.</p>
                    <button onclick="loadView('add-product')" class="btn mt-2">
                        <i class="fas fa-plus"></i> Add Your First Product
                    </button>
                </div>
            `}
        `;
    }

    async function deleteSellerProduct(productId) {
        if (!confirm('Are you sure you want to delete this product?')) {
            return;
        }

        try {
            await apiService.deleteProduct(productId);
            showNotification('Product deleted successfully!', 'success');
            loadView('seller-products');
        } catch (error) {
            showNotification(`Error deleting product: ${error.message}`, 'error');
        }
    }

    async function renderSellerAnalytics() {
        if (!currentUser || currentUser.role !== 'SELLER') {
            return `<div class="card"><p>Access denied. Only sellers can view analytics.</p></div>`;
        }

        try {
            const stats = await apiService.getSellerStats(currentUser.id);
            const topProducts = await apiService.getSellerTopProducts(currentUser.id, 10);
            const salesByCategory = await apiService.getSalesByCategory(currentUser.id);
            const revenueBreakdown = await apiService.getRevenueBreakdown(currentUser.id);
            const recentOrders = await apiService.getUserRecentOrders(currentUser.id, 10);

            return `
                <div class="section-header">
                    <h2><i class="fas fa-chart-bar"></i> Sales Analytics</h2>
                    <div class="flex gap-2">
                        <button onclick="refreshSellerAnalytics()" class="btn-secondary">
                            <i class="fas fa-redo"></i> Refresh
                        </button>
                        <button onclick="loadView('seller-dashboard')" class="btn-outline">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </button>
                    </div>
                </div>

                <div class="dashboard-section">
                    <h3>Business Overview</h3>
                    <div class="dashboard-grid">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <h4>Products</h4>
                            </div>
                            <div class="stat-value">${stats.totalProducts || 0}</div>
                            <div class="stat-label">Total Products</div>
                            <div class="flex justify-between mt-2">
                                <span>Active: ${stats.activeProducts || 0}</span>
                                <span>Verified: ${stats.verifiedProducts || 0}</span>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>Sales</h4>
                            </div>
                            <div class="stat-value">${stats.totalSales || 0}</div>
                            <div class="stat-label">Total Sales</div>
                            <div class="mt-2">
                                <div class="progress-container">
                                    <div>Conversion Rate</div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: ${stats.conversionRate || 0}%"></div>
                                    </div>
                                    <div class="text-right">${stats.conversionRate || 0}%</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <h4>Revenue</h4>
                            </div>
                            <div class="stat-value">$${(stats.totalRevenue || 0).toFixed(2)}</div>
                            <div class="stat-label">Total Revenue</div>
                            <div class="flex justify-between mt-2">
                                <span>Avg. Order: $${(stats.averageOrderValue || 0).toFixed(2)}</span>
                                <span>Growth: ${(stats.revenueGrowth || 0).toFixed(1)}%</span>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <h4>Carbon Impact</h4>
                            </div>
                            <div class="stat-value">${(stats.totalCarbonFootprint || 0).toFixed(1)}</div>
                            <div class="stat-label">Total Carbon (kg)</div>
                            <div class="mt-2">
                                <div>Avg per Product: ${(stats.averageCarbonPerProduct || 0).toFixed(2)} kg</div>
                                <div>Carbon Saved: ${(stats.carbonSaved || 0).toFixed(1)} kg</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-section">
                    <div class="section-header">
                        <h3>Revenue Breakdown</h3>
                        <button onclick="viewRevenueDetails()" class="btn-outline btn-sm">View Details</button>
                    </div>
                    ${revenueBreakdown ? `
                        <div class="dashboard-grid">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-icon" style="background: #DBEAFE; color: #1D4ED8;">
                                        <i class="fas fa-sun"></i>
                                    </div>
                                    <h4>Today</h4>
                                </div>
                                <div class="stat-value" style="color: #1D4ED8;">$${(revenueBreakdown.todayRevenue || 0).toFixed(2)}</div>
                                <div class="stat-label">Revenue</div>
                                <div>Orders: ${revenueBreakdown.todayOrders || 0}</div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <div class="card-icon" style="background: #FEF3C7; color: #D97706;">
                                        <i class="fas fa-calendar-week"></i>
                                    </div>
                                    <h4>This Week</h4>
                                </div>
                                <div class="stat-value" style="color: #D97706;">$${(revenueBreakdown.weekRevenue || 0).toFixed(2)}</div>
                                <div class="stat-label">Revenue</div>
                                <div>Orders: ${revenueBreakdown.weekOrders || 0}</div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <div class="card-icon" style="background: #D1FAE5; color: #065F46;">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <h4>This Month</h4>
                                </div>
                                <div class="stat-value" style="color: #065F46;">$${(revenueBreakdown.monthRevenue || 0).toFixed(2)}</div>
                                <div class="stat-label">Revenue</div>
                                <div>Orders: ${revenueBreakdown.monthOrders || 0}</div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <div class="card-icon">
                                        <i class="fas fa-chart-line"></i>
                                    </div>
                                    <h4>All Time</h4>
                                </div>
                                <div class="stat-value">$${(revenueBreakdown.totalRevenue || 0).toFixed(2)}</div>
                                <div class="stat-label">Revenue</div>
                                <div>Orders: ${revenueBreakdown.totalOrders || 0}</div>
                            </div>
                        </div>
                    ` : '<p>No revenue data available</p>'}
                </div>

                <div class="flex gap-3 mt-3">
                    ${topProducts && topProducts.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <h3>Top Products</h3>
                            </div>
                            <div style="max-height: 400px; overflow-y: auto;">
                                ${topProducts.map((product, index) => `
                                    <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div style="width: 30px; height: 30px; background: ${index < 3 ? 'var(--secondary-color)' : 'var(--gray-medium)'}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            ${index + 1}
                                        </div>
                                        <div style="width: 40px; height: 40px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                            ${product.image ? `<img src="${product.image}" alt="${product.productName}" style="width: 100%; height: 100%; object-fit: cover;">` : '<i class="fas fa-leaf"></i>'}
                                        </div>
                                        <div style="flex: 1;">
                                            <div><strong>${product.productName}</strong></div>
                                            <div style="font-size: 0.9rem;">Sold: ${product.unitsSold} | Revenue: $${product.revenue?.toFixed(2)}</div>
                                        </div>
                                        <button onclick="viewProduct(${product.productId})" class="btn btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}

                    ${salesByCategory ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <h3>Sales by Category</h3>
                            </div>
                            <div style="max-height: 400px; overflow-y: auto;">
                                ${Object.entries(salesByCategory).map(([category, amount]) => `
                                    <div class="flex justify-between items-center mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div>
                                            <div><strong>${category}</strong></div>
                                            <div style="font-size: 0.9rem;">${((amount / Object.values(salesByCategory).reduce((a, b) => a + b, 0)) * 100).toFixed(1)}% of revenue</div>
                                        </div>
                                        <div><strong>$${amount.toFixed(2)}</strong></div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                </div>

                ${recentOrders && recentOrders.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <h3>Recent Orders</h3>
                        </div>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Items</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${recentOrders.map(order => `
                                        <tr>
                                            <td>#${order.orderId}</td>
                                            <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                                            <td>${order.customerName || 'Customer'}</td>
                                            <td>${order.itemCount}</td>
                                            <td>$${order.totalAmount?.toFixed(2)}</td>
                                            <td>
                                                <span class="status-badge status-${order.status?.toLowerCase()}">
                                                    ${order.status}
                                                </span>
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                ` : ''}
            `;
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h3>Sales Analytics</h3>
                    </div>
                    <p>Error loading analytics: ${error.message}</p>
                    <button onclick="renderSellerAnalytics()" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }
    }

    async function renderSellerDashboard() {
        if (!currentUser || currentUser.role !== 'SELLER') {
            return `<div class="card"><p>Access denied. Only sellers can view seller dashboard.</p></div>`;
        }

        try {
            if (!dashboardCache.seller) {
                dashboardCache.seller = await apiService.getSellerDashboard(currentUser.id);
            }
            const dashboard = dashboardCache.seller;

            return `
                <div class="section-header">
                    <h2><i class="fas fa-chart-line"></i> Seller Dashboard</h2>
                    <div class="flex gap-2">
                        <button onclick="refreshSellerDashboard()" class="btn-secondary">
                            <i class="fas fa-redo"></i> Refresh
                        </button>
                        <button onclick="loadView('seller-analytics')" class="btn">
                            <i class="fas fa-chart-bar"></i> Analytics
                        </button>
                    </div>
                </div>

                <div class="dashboard-section">
                    <h3>Business Overview</h3>
                    <div class="dashboard-grid">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <h4>Products</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.totalProducts || 0}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.activeProducts || 0}</div>
                                    <div class="stat-label">Active</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.verifiedProducts || 0}</div>
                                    <div class="stat-label">Verified</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.featuredProducts || 0}</div>
                                    <div class="stat-label">Featured</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>Sales Performance</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.totalSales || 0}</div>
                                    <div class="stat-label">Total Sales</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.monthlySales || 0}</div>
                                    <div class="stat-label">This Month</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.weeklySales || 0}</div>
                                    <div class="stat-label">This Week</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.dailySales || 0}</div>
                                    <div class="stat-label">Today</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <h4>Revenue</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.stats?.totalRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.stats?.monthlyRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">This Month</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.stats?.weeklyRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">This Week</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.stats?.dailyRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Today</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <h4>Carbon Impact</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.stats?.totalCarbonFootprint || 0).toFixed(1)}</div>
                                    <div class="stat-label">Total (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.stats?.carbonSaved || 0).toFixed(1)}</div>
                                    <div class="stat-label">Saved (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.stats?.averageCarbonPerProduct || 0).toFixed(2)}</div>
                                    <div class="stat-label">Avg/Product</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.stats?.ecoRating || 'B'}</div>
                                    <div class="stat-label">Avg Rating</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 mt-3">
                    ${dashboard.topProducts && dashboard.topProducts.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <h3>Top Performing Products</h3>
                                <button onclick="viewTopProducts()" class="btn-outline btn-sm">View All</button>
                            </div>
                            <div style="max-height: 300px; overflow-y: auto;">
                                ${dashboard.topProducts.slice(0, 5).map(product => `
                                    <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div style="width: 40px; height: 40px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                            ${product.image ? `<img src="${product.image}" alt="${product.productName}" style="width: 100%; height: 100%; object-fit: cover;">` : '<i class="fas fa-leaf"></i>'}
                                        </div>
                                        <div style="flex: 1;">
                                            <div><strong>${product.productName}</strong></div>
                                            <div style="font-size: 0.9rem;">Sold: ${product.unitsSold} | Revenue: $${product.revenue?.toFixed(2)}</div>
                                        </div>
                                        <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                            ${product.carbonFootprint} kg
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}

                    ${dashboard.salesByCategory ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <h3>Sales by Category</h3>
                                <button onclick="viewCategorySales()" class="btn-outline btn-sm">Details</button>
                            </div>
                            <div style="max-height: 300px; overflow-y: auto;">
                                ${Object.entries(dashboard.salesByCategory).map(([category, amount]) => `
                                    <div class="flex justify-between items-center mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div>${category}</div>
                                        <div><strong>$${amount.toFixed(2)}</strong></div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="flex gap-2">
                        <button onclick="loadView('add-product')" class="btn">
                            <i class="fas fa-plus"></i> Add Product
                        </button>
                        <button onclick="loadView('seller-products')" class="btn-outline">
                            <i class="fas fa-boxes"></i> Manage Products
                        </button>
                        <button onclick="loadView('seller-analytics')" class="btn-outline">
                            <i class="fas fa-chart-bar"></i> View Analytics
                        </button>
                    </div>
                </div>

                ${dashboard.recentOrders && dashboard.recentOrders.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <h3>Recent Orders</h3>
                        </div>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Items</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${dashboard.recentOrders.map(order => `
                                        <tr>
                                            <td>#${order.orderId}</td>
                                            <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                                            <td>${order.customerName || 'Customer'}</td>
                                            <td>${order.itemCount}</td>
                                            <td>$${order.totalAmount?.toFixed(2)}</td>
                                            <td>
                                                <span class="status-badge status-${order.status?.toLowerCase()}">
                                                    ${order.status}
                                                </span>
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                ` : ''}
            `;
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3>Seller Dashboard</h3>
                    </div>
                    <p>Error loading dashboard: ${error.message}</p>
                    <button onclick="refreshSellerDashboard()" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }
    }

    async function refreshSellerDashboard() {
        dashboardCache.seller = null;
        await loadView('seller-dashboard');
    }

    async function refreshSellerAnalytics() {
        await loadView('seller-analytics');
    }

    function viewTopProducts() {
        if (!dashboardCache.seller || !dashboardCache.seller.topProducts) return;

        const content = `
            <h3>Top Performing Products</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th>Units Sold</th>
                            <th>Revenue</th>
                            <th>Carbon Impact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${dashboardCache.seller.topProducts.map((product, index) => `
                            <tr>
                                <td>
                                    <div style="width: 30px; height: 30px; background: ${index < 3 ? 'var(--secondary-color)' : 'var(--gray-medium)'}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                        ${index + 1}
                                    </div>
                                </td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <div style="width: 50px; height: 50px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                            ${product.image ? `<img src="${product.image}" alt="${product.productName}" style="width: 100%; height: 100%; object-fit: cover;">` : '<i class="fas fa-leaf"></i>'}
                                        </div>
                                        <div>${product.productName}</div>
                                    </div>
                                </td>
                                <td>${product.unitsSold}</td>
                                <td>$${product.revenue?.toFixed(2)}</td>
                                <td>
                                    <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                        ${product.carbonFootprint} kg
                                    </div>
                                </td>
                                <td>
                                    <button onclick="viewProduct(${product.productId})" class="btn btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        `;

        openDashboardModal('Top Products', content);
    }

    function viewCategorySales() {
        if (!dashboardCache.seller || !dashboardCache.seller.salesByCategory) return;

        const salesData = dashboardCache.seller.salesByCategory;
        const total = Object.values(salesData).reduce((a, b) => a + b, 0);

        const content = `
            <h3>Sales by Category</h3>
            <div class="chart-container">
                <div style="display: flex; flex-direction: column; gap: 10px; margin-top: 20px;">
                    ${Object.entries(salesData).map(([category, amount]) => {
                        const percentage = ((amount / total) * 100).toFixed(1);
                        return `
                            <div>
                                <div class="flex justify-between">
                                    <span>${category}</span>
                                    <span>$${amount.toFixed(2)} (${percentage}%)</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${percentage}%"></div>
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
            </div>
            <div class="text-center mt-3">
                <div class="stat-value">$${total.toFixed(2)}</div>
                <div class="stat-label">Total Sales Revenue</div>
            </div>
        `;

        openDashboardModal('Category Sales Analysis', content);
    }

    function viewRevenueDetails() {
        if (!dashboardCache.seller || !dashboardCache.seller.revenueBreakdown) return;

        const revenue = dashboardCache.seller.revenueBreakdown;
        const content = `
            <h3>Revenue Breakdown</h3>
            <div class="dashboard-grid">
                <div class="card">
                    <h4>Today</h4>
                    <div class="stat-value" style="color: #1D4ED8;">$${(revenue.todayRevenue || 0).toFixed(2)}</div>
                    <div class="stat-label">Revenue</div>
                    <div>Orders: ${revenue.todayOrders || 0}</div>
                    <div>Avg. Order: $${((revenue.todayRevenue || 0) / (revenue.todayOrders || 1)).toFixed(2)}</div>
                </div>

                <div class="card">
                    <h4>This Week</h4>
                    <div class="stat-value" style="color: #D97706;">$${(revenue.weekRevenue || 0).toFixed(2)}</div>
                    <div class="stat-label">Revenue</div>
                    <div>Orders: ${revenue.weekOrders || 0}</div>
                    <div>Avg. Order: $${((revenue.weekRevenue || 0) / (revenue.weekOrders || 1)).toFixed(2)}</div>
                </div>

                <div class="card">
                    <h4>This Month</h4>
                    <div class="stat-value" style="color: #065F46;">$${(revenue.monthRevenue || 0).toFixed(2)}</div>
                    <div class="stat-label">Revenue</div>
                    <div>Orders: ${revenue.monthOrders || 0}</div>
                    <div>Avg. Order: $${((revenue.monthRevenue || 0) / (revenue.monthOrders || 1)).toFixed(2)}</div>
                </div>

                <div class="card">
                    <h4>All Time</h4>
                    <div class="stat-value">$${(revenue.totalRevenue || 0).toFixed(2)}</div>
                    <div class="stat-label">Revenue</div>
                    <div>Orders: ${revenue.totalOrders || 0}</div>
                    <div>Avg. Order: $${((revenue.totalRevenue || 0) / (revenue.totalOrders || 1)).toFixed(2)}</div>
                </div>
            </div>
        `;

        openDashboardModal('Revenue Details', content);
    }

    function renderAddProductForm() {
        if (!currentUser || (currentUser.role !== 'SELLER' && currentUser.role !== 'ADMIN')) {
            return `<div class="card"><p>Access denied. Only sellers and admins can add products.</p></div>`;
        }

        return `
            <div class="form-container">
                <h2>Add New Product</h2>
                <form id="productForm" onsubmit="submitProductForm(event)">
                    <div class="form-group">
                        <label for="product-name">Product Name *</label>
                        <input type="text" id="product-name" class="form-control" required maxlength="500">
                        <small class="text-gray">Max 500 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="product-description">Description *</label>
                        <textarea id="product-description" class="form-control" required></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="product-price">Price ($) *</label>
                            <input type="number" id="product-price" class="form-control" min="0.01" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="product-quantity">Quantity *</label>
                            <input type="number" id="product-quantity" class="form-control" min="1" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="product-category">Category *</label>
                        <select id="product-category" class="form-control" required>
                            <option value="">Select category</option>
                            ${categories.map(cat => `
                                <option value="${cat.name}">${cat.name}</option>
                            `).join('')}
                        </select>
                        <small class="text-gray">Max 100 characters</small>
                    </div>

                    <div class="form-group">
                        <label>Product Image</label>
                        <div class="file-upload-container"
                             ondragover="handleDragOver(event)"
                             ondragleave="handleDragLeave(event)"
                             ondrop="handleDrop(event)"
                             onclick="document.getElementById('productImageFile').click()">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p>Drag & drop an image here or click to browse</p>
                            <p><small>Supported formats: JPG, PNG, GIF (Max 10MB)</small></p>
                            <input type="file" id="productImageFile" class="file-input" accept="image/*" onchange="handleImageUpload(event)">
                        </div>

                        <div id="imagePreviewContainer" class="image-preview" style="display: none;">
                            <p>Image Preview:</p>
                            <img id="imagePreview" alt="Product image preview">
                            <div class="flex gap-2 mt-2">
                                <button type="button" onclick="clearImage()" class="btn-danger">
                                    <i class="fas fa-trash"></i> Remove Image
                                </button>
                            </div>
                        </div>
                    </div>

                    <h3>Carbon Footprint (kg CO2e)</h3>
                    <p class="mb-2"><small>Leave all fields as 0 for auto-calculation based on category</small></p>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="carbon-manufacturing">Manufacturing</label>
                            <input type="number" id="carbon-manufacturing" class="form-control" min="0" step="0.1" value="0">
                        </div>
                        <div class="form-group">
                            <label for="carbon-transportation">Transportation</label>
                            <input type="number" id="carbon-transportation" class="form-control" min="0" step="0.1" value="0">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="carbon-packaging">Packaging</label>
                            <input type="number" id="carbon-packaging" class="form-control" min="0" step="0.1" value="0">
                        </div>
                        <div class="form-group">
                            <label for="carbon-disposal">Disposal</label>
                            <input type="number" id="carbon-disposal" class="form-control" min="0" step="0.1" value="0">
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn w-full">
                            <i class="fas fa-plus-circle"></i> Add Product
                        </button>
                    </div>
                </form>
            </div>
        `;
    }

    async function submitProductForm(event) {
        event.preventDefault();

        if (!currentImageBase64) {
            const useDefault = confirm('No image selected. Use default eco icon?');
            if (!useDefault) {
                showNotification('Please select an image or confirm to use default icon', 'warning');
                return;
            }
        }

        const productData = {
            userId: currentUser.id,
            name: document.getElementById('product-name').value,
            description: document.getElementById('product-description').value,
            price: parseFloat(document.getElementById('product-price').value),
            quantity: parseInt(document.getElementById('product-quantity').value),
            category: document.getElementById('product-category').value,
            imageBase64: currentImageBase64 || '',
            manufacturing: parseFloat(document.getElementById('carbon-manufacturing').value) || 0,
            transportation: parseFloat(document.getElementById('carbon-transportation').value) || 0,
            packaging: parseFloat(document.getElementById('carbon-packaging').value) || 0,
            usage: 0,
            disposal: parseFloat(document.getElementById('carbon-disposal').value) || 0
        };

        // Validate name length (500 chars max)
        if (productData.name.length > 500) {
            showNotification('Product name must be 500 characters or less', 'error');
            return;
        }

        // Validate category length (100 chars max)
        if (productData.category.length > 100) {
            showNotification('Category must be 100 characters or less', 'error');
            return;
        }

        try {
            await apiService.addProduct(productData);
            showNotification('Product added successfully!', 'success');

            // Clear image from localStorage after successful submission
            localStorage.removeItem('ecobazaar_product_image');
            currentImageBase64 = null;
            currentImageFile = null;

            // Clear seller dashboard cache
            dashboardCache.seller = null;

            loadView(currentUser.role === 'SELLER' ? 'seller-products' : 'products');
        } catch (error) {
            showNotification(`Error adding product: ${error.message}`, 'error');
        }
    }

    async function renderEditProductForm(productId) {
        if (!currentUser || (currentUser.role !== 'SELLER' && currentUser.role !== 'ADMIN')) {
            return `<div class="card"><p>Access denied. Only sellers and admins can edit products.</p></div>`;
        }

        let product = null;
        try {
            product = await apiService.getProductById(productId);
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h3>Error Loading Product</h3>
                    </div>
                    <p>${error.message}</p>
                    <button onclick="loadView('seller-products')" class="btn mt-2">
                        <i class="fas fa-arrow-left"></i> Back to Products
                    </button>
                </div>
            `;
        }

        return `
            <div class="form-container">
                <h2>Edit Product</h2>
                <form id="editProductForm" onsubmit="updateProduct(${productId}, event)">
                    <div class="form-group">
                        <label for="edit-product-name">Product Name *</label>
                        <input type="text" id="edit-product-name" class="form-control" value="${product.name}" required maxlength="500">
                        <small class="text-gray">Max 500 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="edit-product-description">Description *</label>
                        <textarea id="edit-product-description" class="form-control" required>${product.description}</textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="edit-product-price">Price ($) *</label>
                            <input type="number" id="edit-product-price" class="form-control" value="${product.price}" min="0.01" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="edit-product-quantity">Quantity *</label>
                            <input type="number" id="edit-product-quantity" class="form-control" value="${product.quantity}" min="1" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="edit-product-category">Category *</label>
                        <select id="edit-product-category" class="form-control" required>
                            <option value="">Select category</option>
                            ${categories.map(cat => `
                                <option value="${cat.name}" ${cat.name === product.category ? 'selected' : ''}>${cat.name}</option>
                            `).join('')}
                        </select>
                        <small class="text-gray">Max 100 characters</small>
                    </div>

                    <div class="form-group">
                        <label>Product Image</label>
                        <div class="file-upload-container"
                             ondragover="handleDragOver(event)"
                             ondragleave="handleDragLeave(event)"
                             ondrop="handleDrop(event)"
                             onclick="document.getElementById('editProductImageFile').click()">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p>Drag & drop an image here or click to browse</p>
                            <p><small>Supported formats: JPG, PNG, GIF (Max 10MB)</small></p>
                            <input type="file" id="editProductImageFile" class="file-input" accept="image/*" onchange="handleEditImageUpload(event)">
                        </div>

                        <div id="editImagePreviewContainer" class="image-preview" style="${product.imageUrl ? 'display: block;' : 'display: none;'}">
                            <p>Current Image:</p>
                            <img id="editImagePreview" src="${product.imageUrl || ''}" alt="Product image preview">
                            <div class="flex gap-2 mt-2">
                                <button type="button" onclick="clearEditImage()" class="btn-danger">
                                    <i class="fas fa-trash"></i> Remove Image
                                </button>
                            </div>
                        </div>
                    </div>

                    <h3>Carbon Footprint (kg CO2e)</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="edit-carbon-manufacturing">Manufacturing</label>
                            <input type="number" id="edit-carbon-manufacturing" class="form-control" min="0" step="0.1" value="${product.carbonBreakdown?.manufacturing || 0}">
                        </div>
                        <div class="form-group">
                            <label for="edit-carbon-transportation">Transportation</label>
                            <input type="number" id="edit-carbon-transportation" class="form-control" min="0" step="0.1" value="${product.carbonBreakdown?.transportation || 0}">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="edit-carbon-packaging">Packaging</label>
                            <input type="number" id="edit-carbon-packaging" class="form-control" min="0" step="0.1" value="${product.carbonBreakdown?.packaging || 0}">
                        </div>
                        <div class="form-group">
                            <label for="edit-carbon-disposal">Disposal</label>
                            <input type="number" id="edit-carbon-disposal" class="form-control" min="0" step="0.1" value="${product.carbonBreakdown?.disposal || 0}">
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn w-full">
                            <i class="fas fa-save"></i> Update Product
                        </button>
                    </div>
                </form>
            </div>
        `;
    }

    async function updateProduct(productId, event) {
        event.preventDefault();

        const productData = {
            userId: currentUser.id,
            name: document.getElementById('edit-product-name').value,
            description: document.getElementById('edit-product-description').value,
            price: parseFloat(document.getElementById('edit-product-price').value),
            quantity: parseInt(document.getElementById('edit-product-quantity').value),
            category: document.getElementById('edit-product-category').value,
            imageBase64: currentImageBase64 || '',
            manufacturing: parseFloat(document.getElementById('edit-carbon-manufacturing').value) || 0,
            transportation: parseFloat(document.getElementById('edit-carbon-transportation').value) || 0,
            packaging: parseFloat(document.getElementById('edit-carbon-packaging').value) || 0,
            usage: 0,
            disposal: parseFloat(document.getElementById('edit-carbon-disposal').value) || 0
        };

        try {
            await apiService.updateProduct(productId, productData);
            showNotification('Product updated successfully!', 'success');

            // Clear image from localStorage
            localStorage.removeItem('ecobazaar_product_image');
            currentImageBase64 = null;
            currentImageFile = null;

            // Clear seller dashboard cache
            dashboardCache.seller = null;

            loadView('seller-products');
        } catch (error) {
            showNotification(`Error updating product: ${error.message}`, 'error');
        }
    }

    async function renderPendingProducts() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            return `<div class="card"><p>Access denied. Only admins can view pending products.</p></div>`;
        }

        let pendingProducts = [];
        try {
            pendingProducts = await apiService.getPendingProducts();
        } catch (error) {
            console.error('Error loading pending products:', error);
        }

        return `
            <div class="flex justify-between items-center mb-3">
                <h2><i class="fas fa-clock"></i> Pending Product Verifications</h2>
                <button onclick="loadView('pending-products')" class="btn">
                    <i class="fas fa-redo"></i> Refresh
                </button>
            </div>

            ${pendingProducts.length > 0 ? `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Seller</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Carbon</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${pendingProducts.map(product => `
                                <tr>
                                    <td>
                                        <div class="flex items-center gap-2">
                                            <div style="width: 60px; height: 60px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                                ${product.imageUrl ?
                                                    `<img src="${product.imageUrl}" alt="${product.name}" style="width: 100%; height: 100%; object-fit: cover;">` :
                                                    `<i class="fas fa-leaf" style="color: var(--primary-color);"></i>`
                                                }
                                            </div>
                                            <div>
                                                <div><strong>${product.name}</strong></div>
                                                <div style="font-size: 0.9rem; color: var(--gray-medium);">${product.description.substring(0, 50)}${product.description.length > 50 ? '...' : ''}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>${product.sellerName}</td>
                                    <td>${product.category}</td>
                                    <td>$${product.price.toFixed(2)}</td>
                                    <td>
                                        <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                            <i class="fas fa-cloud"></i> ${product.carbonFootprint} kg
                                        </div>
                                    </td>
                                    <td>${new Date(product.createdAt).toLocaleDateString()}</td>
                                    <td>
                                        <div class="flex gap-1">
                                            <button onclick="viewProduct(${product.id})" class="btn btn-sm">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                            <button onclick="verifyProduct(${product.id})" class="btn-secondary btn-sm">
                                                <i class="fas fa-check-circle"></i> Verify
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>

                <div class="card mt-3">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3>Verification Summary</h3>
                            <p>Pending Verifications: ${pendingProducts.length}</p>
                        </div>
                        <div>
                            <button onclick="verifyAllProducts()" class="btn-secondary">
                                <i class="fas fa-check-double"></i> Verify All
                            </button>
                        </div>
                    </div>
                </div>
            ` : `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3>No Pending Products</h3>
                    </div>
                    <p>All products have been verified.</p>
                    <button onclick="loadView('admin-dashboard')" class="btn mt-2">
                        <i class="fas fa-tachometer-alt"></i> Go to Admin Dashboard
                    </button>
                </div>
            `}
        `;
    }

    async function verifyAllProducts() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            showNotification('Only admins can verify products', 'error');
            return;
        }

        let pendingProducts = [];
        try {
            pendingProducts = await apiService.getPendingProducts();
        } catch (error) {
            showNotification(`Error loading pending products: ${error.message}`, 'error');
            return;
        }

        let verifiedCount = 0;
        for (const product of pendingProducts) {
            try {
                await apiService.verifyProduct(product.id);
                verifiedCount++;
            } catch (error) {
                console.error(`Error verifying product ${product.id}:`, error);
            }
        }

        showNotification(`Verified ${verifiedCount} out of ${pendingProducts.length} products`, 'success');

        // Clear admin dashboard cache
        dashboardCache.admin = null;

        loadView('pending-products');
    }

    async function renderAllOrders() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            return `<div class="card"><p>Access denied. Only admins can view all orders.</p></div>`;
        }

        let allOrders = [];
        try {
            allOrders = await apiService.getAllOrders();
        } catch (error) {
            console.error('Error loading all orders:', error);
        }

        return `
            <h2><i class="fas fa-list"></i> All Orders</h2>

            ${allOrders.length > 0 ? `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Items</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${allOrders.map(order => `
                                <tr>
                                    <td>#${order.id}</td>
                                    <td>
                                        <div>${order.user?.fullName || 'Unknown'}</div>
                                        <div style="font-size: 0.9rem; color: var(--gray-medium);">${order.user?.email || ''}</div>
                                    </td>
                                    <td>${new Date(order.createdAt).toLocaleDateString()}</td>
                                    <td>$${order.totalAmount?.toFixed(2)}</td>
                                    <td>${order.items?.length || 0}</td>
                                    <td>
                                        <span class="status-badge status-${order.status?.toLowerCase()}">
                                            ${order.status}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="flex gap-1">
                                            <button onclick="viewOrder(${order.id})" class="btn btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="updateOrderStatusPrompt(${order.id})" class="btn-secondary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            ` : `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <h3>No Orders Yet</h3>
                    </div>
                    <p>No orders have been placed on the platform yet.</p>
                </div>
            `}
        `;
    }

    async function viewOrder(orderId) {
        try {
            const order = await apiService.getUserOrders(orderId);

            const content = `
                <h3>Order Details #${order.id}</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label>Customer</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${order.user?.fullName || 'Unknown'} (${order.user?.email || 'No email'})
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Order Date</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${new Date(order.createdAt).toLocaleString()}
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Total Amount</label>
                        <div class="form-control" style="background: var(--gray-ultralight); font-weight: bold; color: var(--primary-color);">
                            $${order.totalAmount?.toFixed(2)}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Total Carbon</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${order.totalCarbonFootprint} kg CO2e
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Shipping Address</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${order.shippingAddress}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${order.phoneNumber}
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Payment Method</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            ${order.paymentMethod}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <div class="form-control" style="background: var(--gray-ultralight);">
                            <span class="status-badge status-${order.status?.toLowerCase()}">
                                ${order.status}
                            </span>
                        </div>
                    </div>
                </div>

                <h4>Order Items</h4>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                                <th>Carbon</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${order.items?.map(item => `
                                <tr>
                                    <td>
                                        <div class="flex items-center gap-2">
                                            <div style="width: 40px; height: 40px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                ${item.product?.imageUrl ?
                                                    `<img src="${item.product.imageUrl}" alt="${item.productNameSnapshot}" style="width: 100%; height: 100%; object-fit: cover;">` :
                                                    `<i class="fas fa-leaf"></i>`
                                                }
                                            </div>
                                            <div>${item.productNameSnapshot}</div>
                                        </div>
                                    </td>
                                    <td>$${item.priceSnapshot?.toFixed(2)}</td>
                                    <td>${item.quantity}</td>
                                    <td>$${(item.priceSnapshot * item.quantity).toFixed(2)}</td>
                                    <td>${(item.carbonSnapshot * item.quantity).toFixed(2)} kg</td>
                                </tr>
                            `).join('') || '<tr><td colspan="5" class="text-center">No items</td></tr>'}
                        </tbody>
                    </table>
                </div>

                <div class="flex gap-2 mt-3">
                    <button onclick="updateOrderStatusPrompt(${order.id})" class="btn">
                        <i class="fas fa-edit"></i> Update Status
                    </button>
                    <button onclick="closeModal()" class="btn-outline">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            `;

            openModal(`Order #${order.id}`, content);
        } catch (error) {
            showNotification(`Error loading order: ${error.message}`, 'error');
        }
    }

    function updateOrderStatusPrompt(orderId) {
        const statuses = ['PENDING', 'CONFIRMED', 'PROCESSING', 'SHIPPED', 'DELIVERED', 'CANCELLED'];

        const content = `
            <h3>Update Order Status</h3>
            <form onsubmit="updateOrderStatus(${orderId}, event)">
                <div class="form-group">
                    <label for="orderStatus">Select New Status</label>
                    <select id="orderStatus" class="form-control" required>
                        <option value="">Select status</option>
                        ${statuses.map(status => `
                            <option value="${status}">${status}</option>
                        `).join('')}
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn w-full">
                        <i class="fas fa-save"></i> Update Status
                    </button>
                </div>
            </form>
        `;

        openModal('Update Order Status', content);
    }

    async function updateOrderStatus(orderId, event) {
        event.preventDefault();

        const status = document.getElementById('orderStatus').value;

        try {
            await apiService.updateOrderStatus(orderId, status);
            showNotification('Order status updated successfully!', 'success');
            closeModal();

            // Clear admin dashboard cache
            dashboardCache.admin = null;

            loadView('all-orders');
        } catch (error) {
            showNotification(`Error updating order status: ${error.message}`, 'error');
        }
    }

    async function renderCategories() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            return `<div class="card"><p>Access denied. Only admins can manage categories.</p></div>`;
        }

        return `
            <div class="flex justify-between items-center mb-3">
                <h2><i class="fas fa-tags"></i> Manage Categories</h2>
                <button onclick="showAddCategoryForm()" class="btn">
                    <i class="fas fa-plus"></i> Add Category
                </button>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Icon</th>
                            <th>Active</th>
                            <th>Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${categories.map(category => `
                            <tr>
                                <td>${category.id}</td>
                                <td><strong>${category.name}</strong></td>
                                <td>${category.description}</td>
                                <td><i class="${category.icon}"></i> ${category.icon}</td>
                                <td>${category.active ? 'Yes' : 'No'}</td>
                                <td>${category.displayOrder}</td>
                                <td>
                                    <div class="flex gap-1">
                                        <button onclick="showEditCategoryForm(${category.id})" class="btn-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button onclick="deleteCategory(${category.id})" class="btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        `;
    }

    function showAddCategoryForm() {
        const content = `
            <h3>Add New Category</h3>
            <form onsubmit="addCategory(event)">
                <div class="form-group">
                    <label for="categoryName">Name *</label>
                    <input type="text" id="categoryName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="categoryDescription">Description</label>
                    <textarea id="categoryDescription" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="categoryIcon">Font Awesome Icon</label>
                    <input type="text" id="categoryIcon" class="form-control" value="fa-box" placeholder="e.g., fa-tshirt, fa-home">
                    <small>Use Font Awesome icon class names (without the 'fa-' prefix)</small>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn w-full">
                        <i class="fas fa-plus"></i> Add Category
                    </button>
                </div>
            </form>
        `;

        openModal('Add Category', content);
    }

    async function addCategory(event) {
        event.preventDefault();

        const categoryData = {
            name: document.getElementById('categoryName').value,
            description: document.getElementById('categoryDescription').value,
            icon: document.getElementById('categoryIcon').value
        };

        try {
            await apiService.createCategory(categoryData);
            showNotification('Category added successfully!', 'success');
            closeModal();
            loadCategories();
            loadView('categories');
        } catch (error) {
            showNotification(`Error adding category: ${error.message}`, 'error');
        }
    }

    function showEditCategoryForm(categoryId) {
        const category = categories.find(c => c.id === categoryId);
        if (!category) return;

        const content = `
            <h3>Edit Category</h3>
            <form onsubmit="editCategory(${categoryId}, event)">
                <div class="form-group">
                    <label for="editCategoryName">Name *</label>
                    <input type="text" id="editCategoryName" class="form-control" value="${category.name}" required>
                </div>
                <div class="form-group">
                    <label for="editCategoryDescription">Description</label>
                    <textarea id="editCategoryDescription" class="form-control">${category.description}</textarea>
                </div>
                <div class="form-group">
                    <label for="editCategoryIcon">Font Awesome Icon</label>
                    <input type="text" id="editCategoryIcon" class="form-control" value="${category.icon}" placeholder="e.g., fa-tshirt, fa-home">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn w-full">
                        <i class="fas fa-save"></i> Update Category
                    </button>
                </div>
            </form>
        `;

        openModal('Edit Category', content);
    }

    async function editCategory(categoryId, event) {
        event.preventDefault();

        const categoryData = {
            name: document.getElementById('editCategoryName').value,
            description: document.getElementById('editCategoryDescription').value,
            icon: document.getElementById('editCategoryIcon').value
        };

        try {
            await apiService.updateCategory(categoryId, categoryData);
            showNotification('Category updated successfully!', 'success');
            closeModal();
            loadCategories();
            loadView('categories');
        } catch (error) {
            showNotification(`Error updating category: ${error.message}`, 'error');
        }
    }

    async function deleteCategory(categoryId) {
        if (!confirm('Are you sure you want to delete this category?')) {
            return;
        }

        try {
            await apiService.deleteCategory(categoryId);
            showNotification('Category deleted successfully!', 'success');
            loadCategories();
            loadView('categories');
        } catch (error) {
            showNotification(`Error deleting category: ${error.message}`, 'error');
        }
    }

    async function renderWishlist() {
        if (!currentUser || currentUser.role !== 'USER') {
            return `<div class="card"><p>Access denied. Only users can view wishlist.</p></div>`;
        }

        let wishlistItems = [];
        try {
            wishlistItems = await apiService.getWishlist(currentUser.id);
        } catch (error) {
            console.error('Error loading wishlist:', error);
        }

        return `
            <h2><i class="fas fa-heart"></i> My Wishlist</h2>

            ${wishlistItems.length > 0 ? `
                <div class="products-grid">
                    ${wishlistItems.map(item => `
                        <div class="product-card">
                            <div class="product-image">
                                ${item.image ?
                                    `<img src="${item.image}" alt="${item.productName}">` :
                                    `<i class="fas fa-leaf" style="font-size: 3rem; color: var(--primary-color);"></i>`
                                }
                            </div>
                            <div class="product-details">
                                <h3 class="product-name">${item.productName}</h3>
                                <div class="product-price">$${item.price.toFixed(2)}</div>
                                <div class="product-meta">
                                    <span>${item.category}</span>
                                    <span><i class="fas fa-star"></i> ${item.averageRating || 'No ratings'}</span>
                                </div>
                                <div class="carbon-badge carbon-${item.ecoRating ? item.ecoRating.toLowerCase() : 'b'}">
                                    <i class="fas fa-cloud"></i> ${item.carbonFootprint} kg CO2e
                                </div>
                                <div class="flex gap-1 mt-2">
                                    <button onclick="viewProduct(${item.productId})" class="btn" style="flex: 1;">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                    <button onclick="removeFromWishlist(${item.productId})" class="btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            ` : `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h3>Your wishlist is empty</h3>
                    </div>
                    <p>Add some products to your wishlist!</p>
                    <button onclick="loadView('products')" class="btn mt-2">
                        <i class="fas fa-store"></i> Browse Products
                    </button>
                </div>
            `}
        `;
    }

    async function removeFromWishlist(productId) {
        try {
            await apiService.removeFromWishlist(currentUser.id, productId);
            showNotification('Product removed from wishlist!', 'success');
            loadView('wishlist');
        } catch (error) {
            showNotification(`Error removing from wishlist: ${error.message}`, 'error');
        }
    }

    async function renderUserOrders() {
        if (!currentUser || currentUser.role !== 'USER') {
            return `<div class="card"><p>Access denied. Only users can view orders.</p></div>`;
        }

        let userOrders = [];
        try {
            userOrders = await apiService.getUserOrders(currentUser.id);
        } catch (error) {
            console.error('Error loading user orders:', error);
        }

        return `
            <h2><i class="fas fa-box"></i> My Orders</h2>

            ${userOrders.length > 0 ? `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Amount</th>
                                <th>Carbon</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${userOrders.map(order => `
                                <tr>
                                    <td>#${order.id}</td>
                                    <td>${new Date(order.createdAt).toLocaleDateString()}</td>
                                    <td>${order.items?.length || 0}</td>
                                    <td>$${order.totalAmount?.toFixed(2)}</td>
                                    <td>${order.totalCarbonFootprint} kg</td>
                                    <td>
                                        <span class="status-badge status-${order.status?.toLowerCase()}">
                                            ${order.status}
                                        </span>
                                    </td>
                                    <td>
                                        <button onclick="viewOrder(${order.id})" class="btn btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>

                <div class="card mt-3">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3>Order Summary</h3>
                            <p>Total Orders: ${userOrders.length}</p>
                            <p>Total Spent: $${userOrders.reduce((sum, order) => sum + order.totalAmount, 0).toFixed(2)}</p>
                        </div>
                        <div>
                            <p>Total Carbon: ${userOrders.reduce((sum, order) => sum + order.totalCarbonFootprint, 0).toFixed(2)} kg</p>
                            <p>Average Order Value: $${(userOrders.reduce((sum, order) => sum + order.totalAmount, 0) / userOrders.length).toFixed(2)}</p>
                        </div>
                    </div>
                </div>
            ` : `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <h3>No Orders Yet</h3>
                    </div>
                    <p>You haven't placed any orders yet.</p>
                    <button onclick="loadView('products')" class="btn mt-2">
                        <i class="fas fa-store"></i> Start Shopping
                    </button>
                </div>
            `}
        `;
    }

    async function renderCart() {
        if (!currentUser || currentUser.role !== 'USER') {
            return `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <h3>Shopping Cart</h3>
                    </div>
                    <p>Please login as a user to view your cart.</p>
                    <button onclick="loadView('login')" class="btn mt-2">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </div>
            `;
        }

        try {
            cart = await apiService.getCart(currentUser.id);
        } catch (error) {
            console.error('Error loading cart:', error);
        }

        return `
            <h2><i class="fas fa-shopping-cart"></i> My Shopping Cart</h2>

            ${cart.items && cart.items.length > 0 ? `
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Carbon Footprint</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${cart.items.map(item => `
                                <tr>
                                    <td>
                                        <div class="flex items-center gap-2">
                                            <div style="width: 50px; height: 50px; background: var(--gray-ultralight); border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                ${item.imageUrl ?
                                                    `<img src="${item.imageUrl}" alt="${item.productName}" style="width: 100%; height: 100%; object-fit: cover;">` :
                                                    `<i class="fas fa-leaf" style="color: var(--primary-color);"></i>`
                                                }
                                            </div>
                                            <div>
                                                <div><strong>${item.productName}</strong></div>
                                                <div style="font-size: 0.9rem; color: var(--gray-medium);">${item.category}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>$${item.price.toFixed(2)}</td>
                                    <td>${item.quantity}</td>
                                    <td>
                                        <div class="carbon-badge carbon-${item.ecoRating ? item.ecoRating.toLowerCase() : 'b'}">
                                            <i class="fas fa-cloud"></i> ${item.carbonFootprint} kg
                                        </div>
                                    </td>
                                    <td>
                                        <button onclick="removeFromCart(${item.id})" class="btn-danger">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>

                <div class="card mt-3">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3>Cart Summary</h3>
                            <p>Total Items: ${cart.items.length}</p>
                            <p>Total Carbon: ${cart.items.reduce((sum, item) => sum + (item.carbonFootprint * item.quantity), 0).toFixed(2)} kg CO2e</p>
                        </div>
                        <div style="text-align: right;">
                            <div style="font-size: 2rem; font-weight: 700; color: var(--primary-color);">
                                $${cart.items.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2)}
                            </div>
                            <button onclick="proceedToCheckout()" class="btn-secondary mt-2">
                                <i class="fas fa-credit-card"></i> Proceed to Checkout
                            </button>
                        </div>
                    </div>
                </div>
            ` : `
                <div class="card text-center">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <h3>Your cart is empty</h3>
                    </div>
                    <p>Add some eco-friendly products to your cart!</p>
                    <button onclick="loadView('products')" class="btn mt-2">
                        <i class="fas fa-store"></i> Browse Products
                    </button>
                </div>
            `}
        `;
    }

    async function removeFromCart(itemId) {
        try {
            await apiService.removeFromCart(currentUser.id, itemId);
            showNotification('Item removed from cart', 'success');
            loadView('cart');
        } catch (error) {
            showNotification(`Error removing item: ${error.message}`, 'error');
        }
    }

    function renderCheckout() {
        return `
            <div class="form-container">
                <h2>Checkout</h2>
                <p>This is a demo checkout page. In a real application, you would integrate with a payment gateway.</p>
                <div class="card mt-3">
                    <h3>Order Summary</h3>
                    <p>Total Items: ${cart.items?.length || 0}</p>
                    <p>Total Amount: $${cart.items?.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) || '0.00'}</p>
                    <p>Total Carbon: ${cart.items?.reduce((sum, item) => sum + (item.carbonFootprint * item.quantity), 0).toFixed(2) || '0.00'} kg CO2e</p>
                </div>
                <button onclick="loadView('cart')" class="btn-outline mt-3 w-full">
                    <i class="fas fa-arrow-left"></i> Back to Cart
                </button>
            </div>
        `;
    }

    async function proceedToCheckout() {
        if (!cart.items || cart.items.length === 0) {
            showNotification('Your cart is empty', 'error');
            return;
        }

        const content = `
            <form onsubmit="placeOrder(event)">
                <div class="form-group">
                    <label for="shipping-address">Shipping Address *</label>
                    <textarea id="shipping-address" class="form-control" required placeholder="Enter your full shipping address"></textarea>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number *</label>
                    <input type="tel" id="phone" class="form-control" required placeholder="Enter your phone number">
                </div>
                <div class="form-group">
                    <label for="payment-method">Payment Method *</label>
                    <select id="payment-method" class="form-control" required>
                        <option value="">Select payment method</option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="Debit Card">Debit Card</option>
                        <option value="PayPal">PayPal</option>
                        <option value="Bank Transfer">Bank Transfer</option>
                    </select>
                </div>

                <div class="card mt-2">
                    <h4>Order Summary</h4>
                    <div class="flex justify-between">
                        <span>Total Items:</span>
                        <span>${cart.items.length}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Total Amount:</span>
                        <span>$${cart.items.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2)}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Total Carbon:</span>
                        <span>${cart.items.reduce((sum, item) => sum + (item.carbonFootprint * item.quantity), 0).toFixed(2)} kg CO2e</span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn w-full">
                        <i class="fas fa-check-circle"></i> Place Order
                    </button>
                </div>
            </form>
        `;

        openCheckoutModal();
        document.getElementById('checkoutBody').innerHTML = content;
    }

    async function placeOrder(event) {
        event.preventDefault();

        const address = document.getElementById('shipping-address').value;
        const phone = document.getElementById('phone').value;
        const paymentMethod = document.getElementById('payment-method').value;

        try {
            await apiService.createOrder(currentUser.id, { address, phone, paymentMethod });
            closeCheckoutModal();
            showNotification('Order placed successfully!', 'success');

            // Clear user dashboard cache
            dashboardCache.user = null;

            loadView('orders');
        } catch (error) {
            showNotification(`Error placing order: ${error.message}`, 'error');
        }
    }

    async function renderUserDashboard() {
        if (!currentUser || currentUser.role !== 'USER') {
            return `<div class="card"><p>Access denied. User dashboard is only for USER role.</p></div>`;
        }

        try {
            if (!dashboardCache.user) {
                dashboardCache.user = await apiService.getUserDashboard(currentUser.id);
            }
            const dashboard = dashboardCache.user;

            return `
                <div class="section-header">
                    <h2><i class="fas fa-tachometer-alt"></i> My Dashboard</h2>
                    <div class="flex gap-2">
                        <button onclick="refreshUserDashboard()" class="btn-secondary">
                            <i class="fas fa-redo"></i> Refresh
                        </button>
                        <button onclick="viewDashboardDetails()" class="btn-outline">
                            <i class="fas fa-chart-bar"></i> Details
                        </button>
                    </div>
                </div>

                <div class="dashboard-section">
                    <h3>Eco Impact Overview</h3>
                    <div class="dashboard-grid">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <h4>Eco Score</h4>
                            </div>
                            <div class="stat-value">${dashboard.stats?.ecoScore || 0}</div>
                            <div class="stat-label">Out of 100</div>
                            <div class="mt-2">
                                <div class="progress-container">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: ${dashboard.stats?.ecoScore || 0}%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-cloud"></i>
                                </div>
                                <h4>Carbon Saved</h4>
                            </div>
                            <div class="stat-value">${dashboard.stats?.carbonSaved || 0}</div>
                            <div class="stat-label">Kilograms</div>
                            <div class="mt-2">
                                <div>Equivalent to ${Math.round((dashboard.stats?.carbonSaved || 0) / 21)} trees planted</div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <h4>Green Purchases</h4>
                            </div>
                            <div class="stat-value">${dashboard.stats?.greenPurchases || 0}</div>
                            <div class="stat-label">Eco-friendly items</div>
                            <div class="mt-2">
                                <div>${dashboard.stats?.greenPurchasePercentage || 0}% of total purchases</div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <h4>Achievements</h4>
                            </div>
                            <div class="stat-value">${dashboard.achievements?.filter(a => a.unlocked).length || 0}</div>
                            <div class="stat-label">Unlocked</div>
                            <div class="mt-2">
                                <div>${dashboard.achievements?.length || 0} total available</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 mt-3">
                    <div class="card" style="flex: 1;">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h3>Carbon Trend</h3>
                            <button onclick="viewCarbonTrend()" class="btn-outline btn-sm">Details</button>
                        </div>
                        ${dashboard.carbonTrend ? `
                            <div class="chart-container">
                                <div style="display: flex; align-items: flex-end; height: 200px; gap: 10px; padding: 20px;">
                                    ${dashboard.carbonTrend.carbonData?.map((value, index) => {
                                        const maxValue = Math.max(...dashboard.carbonTrend.carbonData);
                                        const height = maxValue > 0 ? (value / maxValue) * 160 : 0;
                                        return `
                                            <div style="flex: 1; display: flex; flex-direction: column; align-items: center;">
                                                <div style="width: 30px; background: var(--primary-color); height: ${height}px; border-radius: 4px 4px 0 0;"></div>
                                                <div style="margin-top: 10px; font-size: 0.8rem; transform: rotate(-45deg);">${dashboard.carbonTrend.labels[index] || ''}</div>
                                            </div>
                                        `;
                                    }).join('') || '<p style="text-align: center; width: 100%;">No carbon data available</p>'}
                                </div>
                            </div>
                            <div class="text-center mt-2">
                                <div>Carbon footprint over last ${dashboard.carbonTrend?.carbonData?.length || 12} months</div>
                            </div>
                        ` : '<p>No carbon trend data available</p>'}
                    </div>

                    ${dashboard.categoryBreakdown ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <h3>Category Breakdown</h3>
                                <button onclick="viewCategoryBreakdown()" class="btn-outline btn-sm">Details</button>
                            </div>
                            <div style="max-height: 250px; overflow-y: auto;">
                                ${Object.entries(dashboard.categoryBreakdown).map(([category, carbon]) => `
                                    <div class="flex justify-between items-center mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div>${category}</div>
                                        <div><strong>${carbon.toFixed(2)} kg</strong></div>
                                    </div>
                                `).join('')}
                            </div>
                            <div class="text-center mt-2">
                                <div>Carbon by product category</div>
                            </div>
                        </div>
                    ` : ''}
                </div>

                <div class="flex gap-3 mt-3">
                    ${dashboard.achievements && dashboard.achievements.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <h3>Recent Achievements</h3>
                                <button onclick="viewAllAchievements()" class="btn-outline btn-sm">View All</button>
                            </div>
                            <div style="max-height: 250px; overflow-y: auto;">
                                ${dashboard.achievements.filter(a => a.unlocked).slice(0, 5).map(achievement => `
                                    <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div style="font-size: 1.5rem;">${achievement.icon || ''}</div>
                                        <div style="flex: 1;">
                                            <div><strong>${achievement.name}</strong></div>
                                            <div style="font-size: 0.9rem;">${achievement.description}</div>
                                        </div>
                                        <div>
                                            <i class="fas fa-check-circle" style="color: var(--success-color);"></i>
                                        </div>
                                    </div>
                                `).join('')}
                                ${dashboard.achievements.filter(a => !a.unlocked).length > 0 ? `
                                    <div class="text-center mt-2">
                                        <div>${dashboard.achievements.filter(a => !a.unlocked).length} more achievements to unlock</div>
                                    </div>
                                ` : ''}
                            </div>
                        </div>
                    ` : ''}

                    ${dashboard.personalizedTips && dashboard.personalizedTips.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-lightbulb"></i>
                                </div>
                                <h3>Eco Tips</h3>
                                <button onclick="viewAllTips()" class="btn-outline btn-sm">More Tips</button>
                            </div>
                            <div style="max-height: 250px; overflow-y: auto;">
                                ${dashboard.personalizedTips.slice(0, 5).map(tip => `
                                    <div class="flex items-start gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div style="font-size: 1.2rem;">${tip.icon || ''}</div>
                                        <div>${tip.message}</div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                </div>

                ${dashboard.recentOrders && dashboard.recentOrders.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <h3>Recent Orders</h3>
                            <button onclick="loadView('orders')" class="btn-outline btn-sm">View All</button>
                        </div>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Amount</th>
                                        <th>Carbon</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${dashboard.recentOrders.slice(0, 5).map(order => `
                                        <tr>
                                            <td>#${order.orderId}</td>
                                            <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                                            <td>${order.itemCount}</td>
                                            <td>$${order.totalAmount?.toFixed(2)}</td>
                                            <td>${order.carbonFootprint} kg</td>
                                            <td>
                                                <span class="status-badge status-${order.status?.toLowerCase()}">
                                                    ${order.status}
                                                </span>
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                ` : ''}

                <div class="card mt-3">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="flex gap-2">
                        <button onclick="loadView('cart')" class="btn">
                            <i class="fas fa-shopping-cart"></i> View Cart
                        </button>
                        <button onclick="loadView('orders')" class="btn-outline">
                            <i class="fas fa-box"></i> My Orders
                        </button>
                        <button onclick="loadView('wishlist')" class="btn-outline">
                            <i class="fas fa-heart"></i> My Wishlist
                        </button>
                        <button onclick="loadView('products')" class="btn-outline">
                            <i class="fas fa-store"></i> Shop Now
                        </button>
                    </div>
                </div>
            `;
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <h3>User Dashboard</h3>
                    </div>
                    <p>Error loading dashboard: ${error.message}</p>
                    <button onclick="refreshUserDashboard()" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }
    }

    async function refreshUserDashboard() {
        dashboardCache.user = null;
        await loadView('user-dashboard');
    }

    function viewDashboardDetails() {
        if (!dashboardCache.user) return;

        const dashboard = dashboardCache.user;
        const stats = dashboard.stats || {};

        const content = `
            <h3>Detailed Dashboard Statistics</h3>

            <div class="dashboard-grid">
                <div class="card">
                    <h4>Shopping Statistics</h4>
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value">${stats.totalOrders || 0}</div>
                            <div class="stat-label">Total Orders</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${stats.totalItems || 0}</div>
                            <div class="stat-label">Items Purchased</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">$${(stats.totalSpent || 0).toFixed(2)}</div>
                            <div class="stat-label">Total Spent</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">$${(stats.averageOrderValue || 0).toFixed(2)}</div>
                            <div class="stat-label">Avg Order Value</div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h4>Carbon Impact</h4>
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value">${(stats.totalCarbonFootprint || 0).toFixed(1)}</div>
                            <div class="stat-label">Total Carbon (kg)</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${(stats.carbonSaved || 0).toFixed(1)}</div>
                            <div class="stat-label">Carbon Saved (kg)</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${(stats.averageCarbonPerOrder || 0).toFixed(2)}</div>
                            <div class="stat-label">Avg Carbon/Order</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${stats.greenPurchasePercentage || 0}%</div>
                            <div class="stat-label">Green Purchases</div>
                        </div>
                    </div>
                </div>
            </div>

            ${dashboard.ecoRatingDistribution ? `
                <div class="card mt-3">
                    <h4>Eco Rating Distribution</h4>
                    <div class="stats-grid">
                        ${Object.entries(dashboard.ecoRatingDistribution).map(([rating, count]) => `
                            <div class="stat-item">
                                <div class="stat-value">${count}</div>
                                <div class="stat-label">${rating} Rated</div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            ` : ''}

            <div class="text-center mt-3">
                <button onclick="closeDashboardModal()" class="btn-outline">
                    <i class="fas fa-times"></i> Close
                </button>
            </div>
        `;

        openDashboardModal('Dashboard Details', content);
    }

    function viewCarbonTrend() {
        if (!dashboardCache.user || !dashboardCache.user.carbonTrend) return;

        const trend = dashboardCache.user.carbonTrend;
        const content = `
            <h3>Carbon Footprint Trend</h3>
            <p>Your carbon footprint over the last ${trend.carbonData?.length || 12} months</p>

            <div class="chart-container">
                <div style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">
                    ${trend.carbonData?.map((value, index) => {
                        const maxValue = Math.max(...trend.carbonData);
                        const percentage = maxValue > 0 ? (value / maxValue) * 100 : 0;
                        return `
                            <div>
                                <div class="flex justify-between">
                                    <span>${trend.labels[index] || `Month ${index + 1}`}</span>
                                    <span><strong>${value.toFixed(2)} kg</strong></span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${percentage}%"></div>
                                </div>
                            </div>
                        `;
                    }).join('') || '<p>No carbon trend data available</p>'}
                </div>
            </div>

            <div class="text-center mt-3">
                <div class="stat-value">${trend.carbonData?.reduce((a, b) => a + b, 0).toFixed(2) || 0}</div>
                <div class="stat-label">Total Carbon (kg) over period</div>
            </div>
        `;

        openDashboardModal('Carbon Trend Analysis', content);
    }

    function viewCategoryBreakdown() {
        if (!dashboardCache.user || !dashboardCache.user.categoryBreakdown) return;

        const breakdown = dashboardCache.user.categoryBreakdown;
        const total = Object.values(breakdown).reduce((a, b) => a + b, 0);

        const content = `
            <h3>Carbon Footprint by Category</h3>
            <p>Breakdown of your carbon footprint across different product categories</p>

            <div class="chart-container">
                <div style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">
                    ${Object.entries(breakdown).map(([category, carbon]) => {
                        const percentage = total > 0 ? (carbon / total) * 100 : 0;
                        return `
                            <div>
                                <div class="flex justify-between">
                                    <span>${category}</span>
                                    <span><strong>${carbon.toFixed(2)} kg (${percentage.toFixed(1)}%)</strong></span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${percentage}%"></div>
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
            </div>

            <div class="text-center mt-3">
                <div class="stat-value">${total.toFixed(2)}</div>
                <div class="stat-label">Total Carbon from all categories</div>
            </div>
        `;

        openDashboardModal('Category Breakdown', content);
    }

    function viewAllAchievements() {
        if (!dashboardCache.user || !dashboardCache.user.achievements) return;

        const achievements = dashboardCache.user.achievements;
        const unlocked = achievements.filter(a => a.unlocked);
        const locked = achievements.filter(a => !a.unlocked);

        const content = `
            <h3>All Achievements</h3>
            <div class="flex justify-between mb-3">
                <div>
                    <div class="stat-value" style="color: var(--success-color);">${unlocked.length}</div>
                    <div class="stat-label">Unlocked</div>
                </div>
                <div>
                    <div class="stat-value">${locked.length}</div>
                    <div class="stat-label">Locked</div>
                </div>
                <div>
                    <div class="stat-value">${achievements.length}</div>
                    <div class="stat-label">Total</div>
                </div>
            </div>

            <div class="tabs">
                <div class="tab active" onclick="switchAchievementTab('unlocked')">Unlocked (${unlocked.length})</div>
                <div class="tab" onclick="switchAchievementTab('locked')">Locked (${locked.length})</div>
            </div>

            <div id="unlockedAchievements" class="tab-content active">
                ${unlocked.length > 0 ? `
                    <div style="max-height: 400px; overflow-y: auto;">
                        ${unlocked.map(achievement => `
                            <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--primary-bg); border-radius: var(--border-radius); border: 1px solid var(--primary-light);">
                                <div style="font-size: 2rem;">${achievement.icon || ''}</div>
                                <div style="flex: 1;">
                                    <div><strong>${achievement.name}</strong></div>
                                    <div style="font-size: 0.9rem;">${achievement.description}</div>
                                    <div style="font-size: 0.8rem; color: var(--gray-medium);">Unlocked on: ${achievement.unlockedDate ? new Date(achievement.unlockedDate).toLocaleDateString() : 'Recently'}</div>
                                </div>
                                <div style="color: var(--success-color); font-size: 1.5rem;">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                ` : '<p class="text-center">No achievements unlocked yet</p>'}
            </div>

            <div id="lockedAchievements" class="tab-content">
                ${locked.length > 0 ? `
                    <div style="max-height: 400px; overflow-y: auto;">
                        ${locked.map(achievement => `
                            <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                <div style="font-size: 2rem; opacity: 0.5;">${achievement.icon || ''}</div>
                                <div style="flex: 1;">
                                    <div><strong>${achievement.name}</strong></div>
                                    <div style="font-size: 0.9rem;">${achievement.description}</div>
                                    <div class="progress-container">
                                        <div>Progress: ${achievement.currentValue || 0}/${achievement.requiredValue || 100}</div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: ${((achievement.currentValue || 0) / (achievement.requiredValue || 100)) * 100}%"></div>
                                        </div>
                                    </div>
                                </div>
                                <div style="color: var(--gray-medium); font-size: 1.5rem;">
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                ` : '<p class="text-center">No locked achievements</p>'}
            </div>
        `;

        openDashboardModal('Achievements', content);
    }

    function switchAchievementTab(tab) {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

        if (tab === 'unlocked') {
            document.querySelector('.tab:nth-child(1)').classList.add('active');
            document.getElementById('unlockedAchievements').classList.add('active');
        } else {
            document.querySelector('.tab:nth-child(2)').classList.add('active');
            document.getElementById('lockedAchievements').classList.add('active');
        }
    }

    function viewAllTips() {
        if (!dashboardCache.user || !dashboardCache.user.personalizedTips) return;

        const tips = dashboardCache.user.personalizedTips;
        const content = `
            <h3>Personalized Eco Tips</h3>
            <p>Tips to help you reduce your carbon footprint based on your shopping behavior</p>

            <div style="max-height: 500px; overflow-y: auto;">
                ${tips.map(tip => `
                    <div class="card mb-2">
                        <div class="flex items-start gap-2">
                            <div style="font-size: 1.5rem;">${tip.icon || ''}</div>
                            <div style="flex: 1;">
                                <div><strong>${tip.title || 'Eco Tip'}</strong></div>
                                <div>${tip.message}</div>
                                ${tip.impact ? `
                                    <div class="mt-1" style="font-size: 0.9rem; color: var(--primary-color);">
                                        <i class="fas fa-leaf"></i> Potential impact: ${tip.impact}
                                    </div>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                `).join('')}
            </div>
        `;

        openDashboardModal('Eco Tips', content);
    }

    async function renderAdminDashboard() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            return `<div class="card"><p>Access denied. Admin dashboard is only for ADMIN role.</p></div>`;
        }

        try {
            if (!dashboardCache.admin) {
                dashboardCache.admin = await apiService.getAdminDashboard();
            }
            const dashboard = dashboardCache.admin;

            return `
                <div class="section-header">
                    <h2><i class="fas fa-cog"></i> Admin Dashboard</h2>
                    <div class="flex gap-2">
                        <button onclick="refreshAdminDashboard()" class="btn-secondary">
                            <i class="fas fa-redo"></i> Refresh
                        </button>
                        <button onclick="loadView('admin-analytics')" class="btn">
                            <i class="fas fa-chart-pie"></i> Analytics
                        </button>
                    </div>
                </div>

                <div class="dashboard-section">
                    <h3>Platform Overview</h3>
                    <div class="dashboard-grid">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h4>Users</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.totalUsers || 0}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.activeUsers || 0}</div>
                                    <div class="stat-label">Active</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.newUsers || 0}</div>
                                    <div class="stat-label">New (30d)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${Math.round(dashboard.platformStats?.userGrowthRate || 0)}%</div>
                                    <div class="stat-label">Growth Rate</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-store"></i>
                                </div>
                                <h4>Sellers</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.totalSellers || 0}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.activeSellers || 0}</div>
                                    <div class="stat-label">Active</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.newSellers || 0}</div>
                                    <div class="stat-label">New (30d)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.verifiedSellers || 0}</div>
                                    <div class="stat-label">Verified</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <h4>Products</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.totalProducts || 0}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.activeProducts || 0}</div>
                                    <div class="stat-label">Active</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.verifiedProducts || 0}</div>
                                    <div class="stat-label">Verified</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.featuredProducts || 0}</div>
                                    <div class="stat-label">Featured</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-shopping-cart"></i>
                                </div>
                                <h4>Orders</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.totalOrders || 0}</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${dashboard.platformStats?.monthlyOrders || 0}</div>
                                    <div class="stat-label">This Month</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.platformStats?.totalRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Revenue</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">$${(dashboard.platformStats?.averageOrderValue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Avg Order</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 mt-3">
                    <div class="card" style="flex: 1;">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-leaf"></i>
                            </div>
                            <h3>Carbon Impact</h3>
                            <button onclick="viewPlatformCarbonImpact()" class="btn-outline btn-sm">Details</button>
                        </div>
                        ${dashboard.carbonImpact ? `
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.carbonImpact.totalCarbonFootprint || 0).toFixed(0)}</div>
                                    <div class="stat-label">Total Carbon (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.carbonImpact.carbonSaved || 0).toFixed(0)}</div>
                                    <div class="stat-label">Carbon Saved (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.carbonImpact.averageCarbonPerOrder || 0).toFixed(2)}</div>
                                    <div class="stat-label">Avg/Order (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">${(dashboard.carbonImpact.carbonReductionRate || 0).toFixed(1)}%</div>
                                    <div class="stat-label">Reduction Rate</div>
                                </div>
                            </div>
                            <div class="text-center mt-2">
                                <div>Equivalent to ${Math.round((dashboard.carbonImpact.carbonSaved || 0) / 1000)} tons CO2 saved</div>
                            </div>
                        ` : '<p>No carbon impact data available</p>'}
                    </div>

                    ${dashboard.userRoleDistribution ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <h3>User Distribution</h3>
                                <button onclick="viewUserDistribution()" class="btn-outline btn-sm">Details</button>
                            </div>
                            <div style="max-height: 250px; overflow-y: auto;">
                                ${Object.entries(dashboard.userRoleDistribution).map(([role, count]) => `
                                    <div class="flex justify-between items-center mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div>
                                            <div><strong>${role}</strong></div>
                                            <div style="font-size: 0.9rem;">
                                                ${((count / Object.values(dashboard.userRoleDistribution).reduce((a, b) => a + b, 0)) * 100).toFixed(1)}% of total
                                            </div>
                                        </div>
                                        <div class="stat-value" style="font-size: 1.5rem;">${count}</div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                </div>

                <div class="flex gap-3 mt-3">
                    ${dashboard.pendingVerifications && dashboard.pendingVerifications.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <h3>Pending Verifications</h3>
                                <button onclick="loadView('pending-products')" class="btn-outline btn-sm">View All</button>
                            </div>
                            <div style="max-height: 300px; overflow-y: auto;">
                                ${dashboard.pendingVerifications.slice(0, 5).map(product => `
                                    <div class="flex items-center justify-between mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div>
                                            <div><strong>${product.productName}</strong></div>
                                            <div style="font-size: 0.9rem;">Seller: ${product.sellerName}</div>
                                            <div style="font-size: 0.8rem; color: var(--gray-medium);">Submitted: ${new Date(product.submittedDate).toLocaleDateString()}</div>
                                        </div>
                                        <div class="flex gap-1">
                                            <button onclick="viewProduct(${product.productId})" class="btn btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="verifyProduct(${product.productId})" class="btn-secondary btn-sm">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </div>
                                    </div>
                                `).join('')}
                                ${dashboard.pendingVerifications.length > 5 ? `
                                    <div class="text-center mt-2">
                                        <button onclick="loadView('pending-products')" class="btn-outline">
                                            View All (${dashboard.pendingVerifications.length})
                                        </button>
                                    </div>
                                ` : ''}
                            </div>
                        </div>
                    ` : ''}

                    ${dashboard.topSellers && dashboard.topSellers.length > 0 ? `
                        <div class="card" style="flex: 1;">
                            <div class="card-header">
                                <div class="card-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <h3>Top Sellers</h3>
                                <button onclick="viewTopSellers()" class="btn-outline btn-sm">View All</button>
                            </div>
                            <div style="max-height: 300px; overflow-y: auto;">
                                ${dashboard.topSellers.slice(0, 5).map((seller, index) => `
                                    <div class="flex items-center gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                        <div style="width: 30px; height: 30px; background: ${index < 3 ? 'var(--secondary-color)' : 'var(--gray-medium)'}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            ${index + 1}
                                        </div>
                                        <div style="width: 40px; height: 40px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            ${seller.sellerName?.charAt(0) || 'S'}
                                        </div>
                                        <div style="flex: 1;">
                                            <div><strong>${seller.sellerName}</strong></div>
                                            <div style="font-size: 0.9rem;">Revenue: $${seller.revenue?.toFixed(2)} | Products: ${seller.productCount}</div>
                                        </div>
                                        <div class="carbon-badge carbon-${seller.ecoRating ? seller.ecoRating.toLowerCase() : 'b'}">
                                            ${seller.carbonFootprint} kg
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    ` : ''}
                </div>

                ${dashboard.recentActivities && dashboard.recentActivities.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <h3>Recent Activities</h3>
                            <button onclick="viewRecentActivities()" class="btn-outline btn-sm">View All</button>
                        </div>
                        <div style="max-height: 300px; overflow-y: auto;">
                            ${dashboard.recentActivities.slice(0, 10).map(activity => `
                                <div class="flex items-start gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                                    <div style="font-size: 1.2rem; color: ${getActivityColor(activity.type)};">
                                        ${getActivityIcon(activity.type)}
                                    </div>
                                    <div style="flex: 1;">
                                        <div><strong>${activity.description}</strong></div>
                                        <div style="font-size: 0.9rem; color: var(--gray-medium);">
                                            ${activity.userName}  ${new Date(activity.timestamp).toLocaleString()}
                                        </div>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}

                <div class="card mt-3">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="flex gap-2">
                        <button onclick="loadView('pending-products')" class="btn">
                            <i class="fas fa-check-circle"></i> Verify Products
                        </button>
                        <button onclick="loadView('all-orders')" class="btn-outline">
                            <i class="fas fa-list"></i> View All Orders
                        </button>
                        <button onclick="loadView('categories')" class="btn-outline">
                            <i class="fas fa-tags"></i> Manage Categories
                        </button>
                        <button onclick="loadView('admin-analytics')" class="btn-outline">
                            <i class="fas fa-chart-pie"></i> Platform Analytics
                        </button>
                    </div>
                </div>
            `;
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-cog"></i>
                        </div>
                        <h3>Admin Dashboard</h3>
                    </div>
                    <p>Error loading dashboard: ${error.message}</p>
                    <button onclick="refreshAdminDashboard()" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }
    }

    function getActivityColor(type) {
        const colors = {
            'PRODUCT_VERIFIED': 'var(--success-color)',
            'ORDER_PLACED': 'var(--primary-color)',
            'USER_REGISTERED': 'var(--info-color)',
            'PRODUCT_ADDED': 'var(--warning-color)',
            'REVIEW_ADDED': 'var(--accent-color)'
        };
        return colors[type] || 'var(--gray-medium)';
    }

    function getActivityIcon(type) {
        const icons = {
            'PRODUCT_VERIFIED': 'fas fa-check-circle',
            'ORDER_PLACED': 'fas fa-shopping-cart',
            'USER_REGISTERED': 'fas fa-user-plus',
            'PRODUCT_ADDED': 'fas fa-box',
            'REVIEW_ADDED': 'fas fa-star'
        };
        return `<i class="${icons[type] || 'fas fa-bell'}"></i>`;
    }

    async function refreshAdminDashboard() {
        dashboardCache.admin = null;
        await loadView('admin-dashboard');
    }

    function viewPlatformCarbonImpact() {
        if (!dashboardCache.admin || !dashboardCache.admin.carbonImpact) return;

        const impact = dashboardCache.admin.carbonImpact;
        const content = `
            <h3>Platform Carbon Impact</h3>
            <p>Total environmental impact of the EcoBazaar platform</p>

            <div class="dashboard-grid">
                <div class="card">
                    <h4>Carbon Footprint</h4>
                    <div class="stat-value">${(impact.totalCarbonFootprint || 0).toFixed(0)}</div>
                    <div class="stat-label">Total Carbon (kg)</div>
                    <div class="mt-2">
                        <div>Per Order: ${(impact.averageCarbonPerOrder || 0).toFixed(2)} kg</div>
                        <div>Per Product: ${(impact.averageCarbonPerProduct || 0).toFixed(2)} kg</div>
                    </div>
                </div>

                <div class="card">
                    <h4>Carbon Savings</h4>
                    <div class="stat-value">${(impact.carbonSaved || 0).toFixed(0)}</div>
                    <div class="stat-label">Carbon Saved (kg)</div>
                    <div class="mt-2">
                        <div>Reduction Rate: ${(impact.carbonReductionRate || 0).toFixed(1)}%</div>
                        <div>Equivalent to ${Math.round((impact.carbonSaved || 0) / 1000)} tons CO2</div>
                    </div>
                </div>

                <div class="card">
                    <h4>Eco Distribution</h4>
                    <div class="stat-value">${(impact.greenPurchasePercentage || 0).toFixed(1)}%</div>
                    <div class="stat-label">Green Purchases</div>
                    <div class="mt-2">
                        <div>Eco Products: ${impact.ecoProductCount || 0}</div>
                        <div>Avg Eco Rating: ${impact.averageEcoRating || 'B'}</div>
                    </div>
                </div>

                <div class="card">
                    <h4>Impact Comparison</h4>
                    <div class="stat-value">${Math.round((impact.carbonSaved || 0) / 21)}</div>
                    <div class="stat-label">Trees Equivalent</div>
                    <div class="mt-2">
                        <div>Car miles saved: ${Math.round((impact.carbonSaved || 0) * 2.5)}</div>
                        <div>Homes powered: ${Math.round((impact.carbonSaved || 0) / 1000)}</div>
                    </div>
                </div>
            </div>
        `;

        openDashboardModal('Platform Carbon Impact', content);
    }

    function viewUserDistribution() {
        if (!dashboardCache.admin || !dashboardCache.admin.userRoleDistribution) return;

        const distribution = dashboardCache.admin.userRoleDistribution;
        const total = Object.values(distribution).reduce((a, b) => a + b, 0);

        const content = `
            <h3>User Role Distribution</h3>
            <p>Breakdown of users by their roles on the platform</p>

            <div class="chart-container">
                <div style="display: flex; flex-direction: column; gap: 15px; margin-top: 20px;">
                    ${Object.entries(distribution).map(([role, count]) => {
                        const percentage = total > 0 ? (count / total) * 100 : 0;
                        return `
                            <div>
                                <div class="flex justify-between">
                                    <span>${role}</span>
                                    <span><strong>${count} users (${percentage.toFixed(1)}%)</strong></span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${percentage}%"></div>
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
            </div>

            <div class="text-center mt-3">
                <div class="stat-value">${total}</div>
                <div class="stat-label">Total Users on Platform</div>
            </div>
        `;

        openDashboardModal('User Distribution', content);
    }

    function viewTopSellers() {
        if (!dashboardCache.admin || !dashboardCache.admin.topSellers) return;

        const content = `
            <h3>Top Sellers</h3>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Seller</th>
                            <th>Revenue</th>
                            <th>Products</th>
                            <th>Orders</th>
                            <th>Carbon Impact</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${dashboardCache.admin.topSellers.map((seller, index) => `
                            <tr>
                                <td>
                                    <div style="width: 30px; height: 30px; background: ${index < 3 ? 'var(--secondary-color)' : 'var(--gray-medium)'}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                        ${index + 1}
                                    </div>
                                </td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <div style="width: 40px; height: 40px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                            ${seller.sellerName?.charAt(0) || 'S'}
                                        </div>
                                        <div>${seller.sellerName}</div>
                                    </div>
                                </td>
                                <td>$${seller.revenue?.toFixed(2)}</td>
                                <td>${seller.productCount}</td>
                                <td>${seller.orderCount}</td>
                                <td>
                                    <div class="carbon-badge carbon-${seller.ecoRating ? seller.ecoRating.toLowerCase() : 'b'}">
                                        ${seller.carbonFootprint} kg
                                    </div>
                                </td>
                                <td>
                                    <div style="color: var(--secondary-color);">
                                        <i class="fas fa-star"></i> ${seller.rating?.toFixed(1) || 'N/A'}
                                    </div>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        `;

        openDashboardModal('Top Sellers', content);
    }

    function viewRecentActivities() {
        if (!dashboardCache.admin || !dashboardCache.admin.recentActivities) return;

        const content = `
            <h3>Recent Platform Activities</h3>
            <div style="max-height: 500px; overflow-y: auto;">
                ${dashboardCache.admin.recentActivities.map(activity => `
                    <div class="flex items-start gap-2 mb-2 p-2" style="background: var(--gray-ultralight); border-radius: var(--border-radius);">
                        <div style="font-size: 1.2rem; color: ${getActivityColor(activity.type)};">
                            ${getActivityIcon(activity.type)}
                        </div>
                        <div style="flex: 1;">
                            <div><strong>${activity.description}</strong></div>
                            <div style="font-size: 0.9rem; color: var(--gray-medium);">
                                ${activity.userName}  ${new Date(activity.timestamp).toLocaleString()}
                            </div>
                            ${activity.details ? `
                                <div style="font-size: 0.9rem; margin-top: 5px; padding: 5px; background: white; border-radius: 4px;">
                                    ${activity.details}
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `).join('')}
            </div>
        `;

        openDashboardModal('Recent Activities', content);
    }

    async function renderAdminAnalytics() {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            return `<div class="card"><p>Access denied. Only admins can view platform analytics.</p></div>`;
        }

        try {
            const platformStats = await apiService.getPlatformStats();
            const pendingVerifications = await apiService.getPendingVerifications();
            const topSellers = await apiService.getTopSellers(20);
            const recentActivities = await apiService.getRecentActivities(20);
            const carbonImpact = await apiService.getCarbonImpact();
            const userRoleDistribution = await apiService.getUserRoleDistribution();

            return `
                <div class="section-header">
                    <h2><i class="fas fa-chart-pie"></i> Platform Analytics</h2>
                    <div class="flex gap-2">
                        <button onclick="refreshAdminAnalytics()" class="btn-secondary">
                            <i class="fas fa-redo"></i> Refresh
                        </button>
                        <button onclick="loadView('admin-dashboard')" class="btn-outline">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </button>
                    </div>
                </div>

                <div class="dashboard-section">
                    <h3>Platform Performance</h3>
                    <div class="dashboard-grid">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon" style="background: #DBEAFE; color: #1D4ED8;">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <h4>Growth Metrics</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #1D4ED8;">${Math.round(platformStats.userGrowthRate || 0)}%</div>
                                    <div class="stat-label">User Growth</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #D97706;">${Math.round(platformStats.revenueGrowthRate || 0)}%</div>
                                    <div class="stat-label">Revenue Growth</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #065F46;">${Math.round(platformStats.orderGrowthRate || 0)}%</div>
                                    <div class="stat-label">Order Growth</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #7C3AED;">${platformStats.conversionRate || 0}%</div>
                                    <div class="stat-label">Conversion Rate</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon" style="background: #FEF3C7; color: #D97706;">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <h4>Financial Metrics</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #D97706;">$${(platformStats.totalRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Total Revenue</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #1D4ED8;">$${(platformStats.monthlyRevenue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Monthly Revenue</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #065F46;">$${(platformStats.averageOrderValue || 0).toFixed(2)}</div>
                                    <div class="stat-label">Avg Order Value</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #7C3AED;">${platformStats.repeatPurchaseRate || 0}%</div>
                                    <div class="stat-label">Repeat Purchase Rate</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon" style="background: #D1FAE5; color: #065F46;">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <h4>Carbon Metrics</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #065F46;">${(carbonImpact.totalCarbonFootprint || 0).toFixed(0)}</div>
                                    <div class="stat-label">Total Carbon (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #10B981;">${(carbonImpact.carbonSaved || 0).toFixed(0)}</div>
                                    <div class="stat-label">Carbon Saved (kg)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #D97706;">${(carbonImpact.carbonReductionRate || 0).toFixed(1)}%</div>
                                    <div class="stat-label">Reduction Rate</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #7C3AED;">${carbonImpact.greenPurchasePercentage || 0}%</div>
                                    <div class="stat-label">Green Purchases</div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-icon" style="background: #F3E8FF; color: #7C3AED;">
                                    <i class="fas fa-tachometer-alt"></i>
                                </div>
                                <h4>Engagement Metrics</h4>
                            </div>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #7C3AED;">${platformStats.activeUsers || 0}</div>
                                    <div class="stat-label">Active Users</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #1D4ED8;">${platformStats.dailyActiveUsers || 0}</div>
                                    <div class="stat-label">Daily Active</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #D97706;">${(platformStats.averageSessionDuration || 0).toFixed(1)}</div>
                                    <div class="stat-label">Avg Session (min)</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value" style="color: #065F46;">${platformStats.bounceRate || 0}%</div>
                                    <div class="stat-label">Bounce Rate</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 mt-3">
                    <div class="card" style="flex: 1;">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3>User Analytics</h3>
                        </div>
                        ${userRoleDistribution ? `
                            <div style="max-height: 300px; overflow-y: auto;">
                                ${Object.entries(userRoleDistribution).map(([role, count]) => {
                                    const total = Object.values(userRoleDistribution).reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? (count / total) * 100 : 0;
                                    return `
                                        <div class="mb-2">
                                            <div class="flex justify-between">
                                                <span>${role}</span>
                                                <span><strong>${count} (${percentage.toFixed(1)}%)</strong></span>
                                            </div>
                                            <div class="progress-bar">
                                                <div class="progress-fill" style="width: ${percentage}%"></div>
                                            </div>
                                        </div>
                                    `;
                                }).join('')}
                            </div>
                            <div class="text-center mt-2">
                                <div class="stat-value">${Object.values(userRoleDistribution).reduce((a, b) => a + b, 0)}</div>
                                <div class="stat-label">Total Platform Users</div>
                            </div>
                        ` : '<p>No user distribution data available</p>'}
                    </div>

                    <div class="card" style="flex: 1;">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3>Order Analytics</h3>
                        </div>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value">${platformStats.totalOrders || 0}</div>
                                <div class="stat-label">Total Orders</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">${platformStats.monthlyOrders || 0}</div>
                                <div class="stat-label">This Month</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">${platformStats.weeklyOrders || 0}</div>
                                <div class="stat-label">This Week</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">${platformStats.dailyOrders || 0}</div>
                                <div class="stat-label">Today</div>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <div>Avg Orders/Day: ${(platformStats.averageDailyOrders || 0).toFixed(1)}</div>
                            <div>Peak Orders: ${platformStats.peakDailyOrders || 0}</div>
                        </div>
                    </div>
                </div>

                ${topSellers && topSellers.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-trophy"></i>
                            </div>
                            <h3>Top Sellers Performance</h3>
                        </div>
                        <div class="table-container">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Seller</th>
                                        <th>Revenue</th>
                                        <th>Products</th>
                                        <th>Orders</th>
                                        <th>Rating</th>
                                        <th>Carbon Efficiency</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${topSellers.map((seller, index) => `
                                        <tr>
                                            <td>
                                                <div style="width: 30px; height: 30px; background: ${index < 3 ? 'var(--secondary-color)' : 'var(--gray-medium)'}; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                                    ${index + 1}
                                                </div>
                                            </td>
                                            <td>${seller.sellerName}</td>
                                            <td>$${seller.revenue?.toFixed(2)}</td>
                                            <td>${seller.productCount}</td>
                                            <td>${seller.orderCount}</td>
                                            <td>
                                                <div style="color: var(--secondary-color);">
                                                    <i class="fas fa-star"></i> ${seller.rating?.toFixed(1) || 'N/A'}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="carbon-badge carbon-${seller.ecoRating ? seller.ecoRating.toLowerCase() : 'b'}">
                                                    ${seller.carbonEfficiency?.toFixed(2) || 'N/A'} kg/$
                                                </div>
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                ` : ''}

                ${pendingVerifications && pendingVerifications.length > 0 ? `
                    <div class="card mt-3">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <h3>Verification Backlog</h3>
                        </div>
                        <div class="flex justify-between items-center p-3">
                            <div>
                                <div class="stat-value" style="color: var(--warning-color);">${pendingVerifications.length}</div>
                                <div class="stat-label">Pending Verifications</div>
                            </div>
                            <div>
                                <div>Avg wait time: ${calculateAverageWaitTime(pendingVerifications)} days</div>
                                <div>Oldest: ${getOldestPendingDate(pendingVerifications)}</div>
                            </div>
                            <div>
                                <button onclick="loadView('pending-products')" class="btn">
                                    <i class="fas fa-check-circle"></i> Process Now
                                </button>
                            </div>
                        </div>
                    </div>
                ` : ''}
            `;
        } catch (error) {
            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <h3>Platform Analytics</h3>
                    </div>
                    <p>Error loading analytics: ${error.message}</p>
                    <button onclick="refreshAdminAnalytics()" class="btn mt-2">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
        }
    }

    function calculateAverageWaitTime(pendingItems) {
        if (!pendingItems || pendingItems.length === 0) return 0;

        const now = new Date();
        const totalDays = pendingItems.reduce((sum, item) => {
            const submittedDate = new Date(item.submittedDate);
            const days = Math.ceil((now - submittedDate) / (1000 * 60 * 60 * 24));
            return sum + days;
        }, 0);

        return Math.round(totalDays / pendingItems.length);
    }

    function getOldestPendingDate(pendingItems) {
        if (!pendingItems || pendingItems.length === 0) return 'N/A';

        const oldest = pendingItems.reduce((oldest, item) => {
            const currentDate = new Date(item.submittedDate);
            return currentDate < oldest ? currentDate : oldest;
        }, new Date());

        const days = Math.ceil((new Date() - oldest) / (1000 * 60 * 60 * 24));
        return `${days} days ago`;
    }

    async function refreshAdminAnalytics() {
        await loadView('admin-analytics');
    }

    async function renderProducts(params = {}) {
        const { category, search } = params;
        let productsData = { products: [] };

        try {
            const queryParams = {};
            if (category) queryParams.category = category;
            if (search) queryParams.search = search;

            productsData = await apiService.getProducts(queryParams);
            products = productsData.products || [];
        } catch (error) {
            console.error('Error loading products:', error);
        }

        return `
            <div class="flex justify-between items-center mb-3">
                <h2>Eco Products</h2>
                <div class="flex gap-2">
                    <input type="text" id="productSearch" class="form-control" placeholder="Search products..." value="${search || ''}"
                           onkeyup="if(event.key === 'Enter') searchProducts()">
                    <button onclick="searchProducts()" class="btn">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>

            <div class="flex gap-2 mb-3" style="flex-wrap: wrap;">
                <button onclick="loadView('products')" class="btn-outline ${!category ? 'active' : ''}">
                    All Categories
                </button>
                ${categories.slice(0, 6).map(cat => `
                    <button onclick="loadView('products', {category: '${cat.name}'})"
                            class="btn-outline ${category === cat.name ? 'active' : ''}">
                        ${cat.name}
                    </button>
                `).join('')}
            </div>

            ${products.length > 0 ? `
                <div class="products-grid">
                    ${products.map(product => `
                        <div class="product-card">
                            <div class="product-image">
                                ${product.imageUrl ?
                                    `<img src="${product.imageUrl}" alt="${product.name}" onerror="this.onerror=null; this.parentElement.innerHTML='<i class=\"fas fa-leaf\" style=\"font-size: 3rem; color: var(--primary-color);\"></i>';">` :
                                    `<i class="fas fa-leaf" style="font-size: 3rem; color: var(--primary-color);"></i>`
                                }
                                ${product.featured ? `
                                    <div class="product-badge">
                                        <i class="fas fa-star"></i> Featured
                                    </div>
                                ` : ''}
                            </div>
                            <div class="product-details">
                                <h3 class="product-name" title="${product.name}">${product.name.length > 50 ? product.name.substring(0, 50) + '...' : product.name}</h3>
                                <div class="product-price">$${product.price.toFixed(2)}</div>
                                <div class="product-meta">
                                    <span title="${product.category}">${product.category.length > 15 ? product.category.substring(0, 15) + '...' : product.category}</span>
                                    <span><i class="fas fa-eye"></i> ${product.viewCount || 0}</span>
                                </div>
                                <div class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}">
                                    <i class="fas fa-cloud"></i> ${product.carbonFootprint} kg CO2e | ${product.ecoRating || 'B'}
                                </div>
                                <div class="flex gap-1 mt-2">
                                    <button onclick="viewProduct(${product.id})" class="btn" style="flex: 1;">
                                        <i class="fas fa-eye"></i> Details
                                    </button>
                                    ${currentUser && currentUser.role === 'USER' ? `
                                        <button onclick="addToCart(${product.id})" class="btn-secondary">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>

                ${productsData.totalPages > 1 ? `
                    <div class="flex justify-center gap-2 mt-3">
                        <button onclick="loadProductsPage(${productsData.currentPage - 1})"
                                class="btn-outline ${!productsData.hasPrevious ? 'hidden' : ''}">
                            <i class="fas fa-chevron-left"></i> Previous
                        </button>
                        <span class="flex items-center">Page ${productsData.currentPage + 1} of ${productsData.totalPages}</span>
                        <button onclick="loadProductsPage(${productsData.currentPage + 1})"
                                class="btn-outline ${!productsData.hasNext ? 'hidden' : ''}">
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                ` : ''}
            ` : `
                <div class="card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <h3>No products found</h3>
                    </div>
                    <p>${search ? `No products match your search "${search}"` : 'No products available in this category'}</p>
                    <button onclick="loadView('products')" class="btn mt-2">
                        <i class="fas fa-store"></i> Browse All Products
                    </button>
                </div>
            `}
        `;
    }

    async function viewProduct(productId) {
        try {
            const product = await apiService.getProductById(productId);

            const content = `
                <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 30px;">
                    <div>
                        <div class="product-image" style="height: 300px;">
                            ${product.imageUrl ?
                                `<img src="${product.imageUrl}" alt="${product.name}" style="width: 100%; height: 100%; object-fit: contain;" onerror="this.onerror=null; this.parentElement.innerHTML='<i class=\"fas fa-leaf\" style=\"font-size: 5rem; color: var(--primary-color);\"></i>';">` :
                                `<i class="fas fa-leaf" style="font-size: 5rem; color: var(--primary-color);"></i>`
                            }
                        </div>
                    </div>
                    <div>
                        <h2>${product.name}</h2>
                        <div class="product-price" style="font-size: 1.8rem;">$${product.price.toFixed(2)}</div>

                        <div class="flex items-center gap-2 mb-2">
                            <span class="carbon-badge carbon-${product.ecoRating ? product.ecoRating.toLowerCase() : 'b'}" style="font-size: 1rem;">
                                <i class="fas fa-cloud"></i> ${product.carbonFootprint} kg CO2e | ${product.ecoRating || 'B'}
                            </span>
                            ${product.verified ? `
                                <span class="badge-success">
                                    <i class="fas fa-check-circle"></i> Verified
                                </span>
                            ` : ''}
                        </div>

                        <p>${product.description}</p>

                        <div class="product-meta">
                            <div><strong>Category:</strong> ${product.category}</div>
                            <div><strong>Seller:</strong> ${product.sellerName || 'Unknown'}</div>
                            <div><strong>Stock:</strong> ${product.quantity} available</div>
                            <div><strong>Views:</strong> ${product.viewCount || 0}</div>
                            <div><strong>Sold:</strong> ${product.soldCount || 0}</div>
                            <div><strong>Rating:</strong> ${product.averageRating || 'No ratings yet'}</div>
                        </div>

                        ${currentUser && currentUser.role === 'USER' ? `
                            <div class="flex gap-2 mt-3">
                                <button onclick="addToCart(${product.id})" class="btn" style="flex: 1;">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </button>
                                <button onclick="addToWishlist(${product.id})" class="btn-outline">
                                    <i class="fas fa-heart"></i> Wishlist
                                </button>
                            </div>
                        ` : ''}

                        ${currentUser && (currentUser.role === 'ADMIN' || (currentUser.role === 'SELLER' && currentUser.id === product.sellerId)) ? `
                            <div class="flex gap-2 mt-3">
                                <button onclick="loadView('edit-product', {id: ${product.id}})" class="btn">
                                    <i class="fas fa-edit"></i> Edit Product
                                </button>
                                ${currentUser.role === 'ADMIN' ? `
                                    <button onclick="toggleFeatured(${product.id})" class="btn-secondary">
                                        <i class="fas fa-star"></i> ${product.featured ? 'Unfeature' : 'Feature'}
                                    </button>
                                    ${!product.verified ? `
                                        <button onclick="verifyProduct(${product.id})" class="btn">
                                            <i class="fas fa-check-circle"></i> Verify
                                        </button>
                                    ` : ''}
                                ` : ''}
                            </div>
                        ` : ''}
                    </div>
                </div>

                <div class="mt-3">
                    <h3>Carbon Breakdown</h3>
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-label">Manufacturing</div>
                            <div class="stat-value">${product.carbonBreakdown?.manufacturing || 0}</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Transportation</div>
                            <div class="stat-value">${product.carbonBreakdown?.transportation || 0}</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Packaging</div>
                            <div class="stat-value">${product.carbonBreakdown?.packaging || 0}</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Disposal</div>
                            <div class="stat-value">${product.carbonBreakdown?.disposal || 0}</div>
                        </div>
                    </div>
                </div>
            `;

            openModal(product.name, content);
        } catch (error) {
            showNotification(`Error loading product: ${error.message}`, 'error');
        }
    }

    async function addToCart(productId) {
        if (!currentUser || currentUser.role !== 'USER') {
            showNotification('Please login as a user to add items to cart', 'error');
            return;
        }

        try {
            await apiService.addToCart(currentUser.id, { productId, quantity: 1 });
            showNotification('Product added to cart!', 'success');
            loadView('cart');
        } catch (error) {
            showNotification(`Error adding to cart: ${error.message}`, 'error');
        }
    }

    async function addToWishlist(productId) {
        if (!currentUser) {
            showNotification('Please login to add items to wishlist', 'error');
            return;
        }

        try {
            await apiService.addToWishlist(currentUser.id, productId);
            showNotification('Product added to wishlist!', 'success');
        } catch (error) {
            showNotification(`Error adding to wishlist: ${error.message}`, 'error');
        }
    }

    // Utility functions
    function searchProducts() {
        const searchTerm = document.getElementById('productSearch').value;
        loadView('products', { search: searchTerm });
    }

    async function loadProductsPage(page) {
        loadView('products', { page });
    }

    async function verifyProduct(productId) {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            showNotification('Only admins can verify products', 'error');
            return;
        }

        try {
            await apiService.verifyProduct(productId);
            showNotification('Product verified successfully!', 'success');

            // Clear admin dashboard cache
            dashboardCache.admin = null;

            closeModal();
            loadView('pending-products');
        } catch (error) {
            showNotification(`Error verifying product: ${error.message}`, 'error');
        }
    }

    async function toggleFeatured(productId) {
        if (!currentUser || currentUser.role !== 'ADMIN') {
            showNotification('Only admins can feature products', 'error');
            return;
        }

        try {
            await apiService.toggleFeaturedStatus(productId);
            showNotification('Product featured status updated!', 'success');
            closeModal();
        } catch (error) {
            showNotification(`Error updating featured status: ${error.message}`, 'error');
        }
    }

    function handleEditImageUpload(event) {
        handleImageUpload(event);
    }

    function clearEditImage() {
        clearImage();
    }

    // Static pages
